@using Dsp.Extensions
@if (Request.IsAuthenticated)
{
    <li class="hidden-xs hidden-sm">
        <p class="navbar-text">
            Signed in as <strong>@User.Identity.Name</strong>
        </p>
    </li>
    <li class="@(ViewBag.Title.Contains("Account") ? "active" : "")">
        <a class="navbar-brand" rel="home" href="@Url.Action("Index", "Account", new {area = "Members"})" style="padding:9px"
           data-toggle="tooltip" data-placement="bottom" title="Account">
            <img src="~/Images/Avatars/@(User.Identity.GetAvatar())" height="35" width="35" class="img-circle" id="avatar"/>
        </a>
    </li>
    <li>
        @using (Html.BeginForm("SignOut", "Account", new {area = "Members"}, FormMethod.Post, new {id = "signoutForm"}))
        {
            @Html.AntiForgeryToken()
        }
        <a href="javascript:document.getElementById('signoutForm').submit()"
           data-toggle="tooltip" data-placement="bottom" title="Sign Out">
            <i class="fa fa-sign-out"></i>
        </a>
    </li>
}
else
{
    <li class="@(ViewBag.Title.Contains("Sign In") ? "active" : "")">
        <a href="@Url.Action("SignIn", "Account", new { area = "Members" })"
           data-toggle="tooltip" data-placement="bottom" title="Member Sign In">
            <i class="fa fa-sign-in"></i>
        </a>
    </li>
}
