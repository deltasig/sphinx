@if (Request.IsAuthenticated)
{
    <li class="visible-lg"><p class="navbar-text">Signed in as</p></li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="hidden-lg">Signed in as</span> 
            <strong>@User.Identity.Name</strong> <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="@Url.Action("Index", "Account", new {area = "Members"})">
                    <i class="fa fa-user"></i> Profile
                </a>
            </li>
            <li>
                @using (Html.BeginForm("SignOut", "Account", new {area = "Members"}, FormMethod.Post, new {id = "signoutForm"}))
                {
                    @Html.AntiForgeryToken()
                }
                <a href="javascript:document.getElementById('signoutForm').submit()">
                    <i class="fa fa-sign-out"></i> Sign Out
                </a>
            </li>
        </ul>
    </li>
}
else
{
    <li class="@(ViewContext.RouteData.Values.ContainsValue("SignIn") ? "active" : "")">
        <a href="@Url.Action("SignIn", "Account", new { area = "Members" })">
            <i class="fa fa-sign-in"></i> Sign In
        </a>
    </li>
}
