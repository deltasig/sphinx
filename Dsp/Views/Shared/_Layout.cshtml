<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" >
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @RenderSection("AdditionalMeta", false)
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/Favicon-16x16.png" />
    <link rel="stylesheet" type="text/css" href="~/Content/OpenSans.css">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/custom-css")
    @Styles.Render("~/Content/font-awesome")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body style="padding: 0">
    @{ Html.RenderPartial("Nav"); }
    @RenderSection("Title", required: false)
    @RenderBody()
    @{ Html.RenderPartial("Footer"); }

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            // setTimeout() function will be fired after page is loaded it will wait for 5 sec. and then will fire the hide() functions.
            setTimeout(function () {
                $("#success-message").hide("blind", {}, 1000);
                $("#failure-message").hide("blind", {}, 1000);
                $("#message").hide("blind", {}, 1000);
            }, 5000);

            $("[data-toggle=\"tooltip\"]").tooltip();
            $("[data-toggle=\"popover\"]").tooltip();
        });
    </script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i["GoogleAnalyticsObject"] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments);
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, "script", "//www.google-analytics.com/analytics.js", "ga");

        ga("create", "UA-38423515-2", "auto");
        ga("send", "pageview");
    </script>
</body>
</html>
