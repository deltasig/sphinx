@model Dsp.Entities.Semester
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Semester";
}
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datetimepicker-build.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Semesters
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <h3>@Model.ToString() <small>Semester</small></h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.SemesterId)

                <div class="form-group">
                    @Html.LabelFor(model => model.DateStart, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group date" id="dtp1">
                        @Html.EditorFor(model => model.DateStart, new { htmlAttributes = new { @class = "form-control", type = "datetime" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.DateStart, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateEnd, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group date" id="dtp2">
                        @Html.EditorFor(model => model.DateEnd, new { htmlAttributes = new { @class = "form-control", type = "datetime" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.DateEnd, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TransitionDate, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group date" id="dtp3">
                        @Html.EditorFor(model => model.TransitionDate, new { htmlAttributes = new { @class = "form-control", type = "datetime" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.TransitionDate, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MinimumServiceHours, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.MinimumServiceHours, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.MinimumServiceHours, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/moment.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js"></script>
@section scripts
{
    <script type="text/javascript">

        $(function () {
            $("#dtp1").datetimepicker({
                format: "MM/DD/YYYY"
            });
            $("#dtp2").datetimepicker({
                format: "MM/DD/YYYY"
            });
            $("#dtp3").datetimepicker({
                format: "MM/DD/YYYY"
            });
        });

    </script>
}