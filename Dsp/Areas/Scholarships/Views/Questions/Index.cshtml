@model IEnumerable<Dsp.Entities.ScholarshipQuestion>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Scholarship Application Question Pool";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6">
            <p>
                <a href="@Url.Action("Index", "Applications", new { area = "Scholarships" })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Scholarships
                </a>
            </p>
        </div>
        <div class="col-xs-6 text-right">
            <p>
                @Html.ActionLink("Create New", "Create", "Questions", new { area = "Scholarships" }, new { @class = "btn btn-sm btn-success" })
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Prompt</th>
                            <th class="col-md-1">Min Length</th>
                            <th class="col-md-1">Max Length</th>
                            <th class="col-md-1">Submissions</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Prompt</td>
                                <td>@item.AnswerMinimumLength</td>
                                <td>@item.AnswerMaximumLength</td>
                                <td>@item.Answers.Count</td>
                                <td class="text-right">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ScholarshipQuestionId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ScholarshipQuestionId })
                                    @if (!item.Answers.Any())
                                    {
                                        @: |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ScholarshipQuestionId })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
