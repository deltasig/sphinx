@model IEnumerable<Dsp.Entities.ScholarshipType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Scholarship Types";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-6">
            @Html.ActionLink("Back to Scholarships", "Index", "Applications", new { area = "Scholarships" }, new { @class = "" })
        </div>
        <div class="col-xs-6 text-right">
            <p>
                @Html.ActionLink("Create New", "Create", "Types", new { area = "Scholarships" }, new { @class = "btn btn-sm btn-success" })
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-classes="table table-condensed"
                           data-search="true" data-pagination="true" data-page-size="25" data-sort-name="name" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-sortable="true" data-field="names">Name</th>
                                <th class="col-sm-1" data-sortable="true" data-field="app-count">Applications</th>
                                <th class="col-sm-2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) 
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Applications.Count
                                    </td>
                                    <td class="text-right">
                                        @Html.ActionLink("Edit", "Edit", new { id=item.ScholarshipTypeId }) 
                                        @if (!item.Applications.Any())
                                        {
                                            @: |
                                            @Html.ActionLink("Delete", "Delete", new { id=item.ScholarshipTypeId })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        


    </script>
}