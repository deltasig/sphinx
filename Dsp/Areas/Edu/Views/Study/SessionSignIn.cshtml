@model Dsp.Entities.StudyHour
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Session Sign In";
}
@section styles {
    @Styles.Render("~/content/datetimepicker")
}

<div class="container-fluid">
    <div class="row row-space">
        <div class="col-xs-12">
            <a href="@Url.Action("Sessions", new { id = Model.SessionId })" class="btn btn-sm btn-default">
                <i class="fa fa-caret-left"></i> Back to Session
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.AssignmentId)
                @Html.HiddenFor(m => m.SessionId)
                @Html.HiddenFor(m => m.MemberId)

                <div class="form-group">
                    @Html.Label("Member", new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                        </span>
                        <input type="text" class="form-control" value="@Model.Member.ToString()" disabled>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SignedInOn, new { @class = "control-label" })
                    <div class="input-group date" id="dtp1">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.EditorFor(m => m.SignedInOn, new { htmlAttributes = new { @class = "form-control", type = "datetime" } })
                    </div>
                    @Html.ValidationMessageFor(m => m.SignedInOn, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SignedOutOn, new {@class = "control-label"})
                    <div class="input-group date" id="dtp2">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.EditorFor(m => m.SignedOutOn, new {htmlAttributes = new {@class = "form-control", type = "datetime"}})
                    </div>
                    @Html.ValidationMessageFor(m => m.SignedOutOn, "", new {@class = "text-danger"})
                </div>

                <div class="form-group">
                    <input type="submit" value="Sign In" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/datetimepicker")
    <script type="text/javascript">
        $(function () {
            $("#dtp1").datetimepicker();
            $("#dtp2").datetimepicker();
        });
    </script>
}