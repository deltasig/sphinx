@model Dsp.Entities.ClassTaken

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Class Taken";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Schedule", new { userName = Model.Member.UserName })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Classes
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="alert alert-danger">
                <p>Are you sure you want to delete this <strong>class</strong>?</p>
            </div>
            <div class="form-group">
                <dl class="dl-horizontal">
                    <dt>Member</dt>
                    <dd>@Model.Member.FirstName @Model.Member.LastName</dd>
                    <dt>Semester</dt>
                    <dd>@Model.Semester.ToString()</dd>
                    <dt>Class</dt>
                    <dd>@Model.Class.CourseShorthand: @Model.Class.CourseName</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.UserId)
                @Html.HiddenFor(m => m.SemesterId)
                @Html.HiddenFor(m => m.ClassId)
                @Html.HiddenFor(m => m.IsSummerClass)

                <div>
                    <input type="submit" value="Delete" class="btn btn-default" /> 
                </div>
            }
        </div>
    </div>
</div>