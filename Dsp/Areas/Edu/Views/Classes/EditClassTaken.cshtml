@model Dsp.Entities.ClassTaken

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Class Enrollment Info";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Schedule", new { userName = Model.Member.UserName })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to @Model.Member.FirstName's Schedule
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.ClassId)
                @Html.HiddenFor(model => model.SemesterId)

                <div class="form-group">
                    <dl class="dl-horizontal">
                        <dt>Member</dt>
                        <dd>@Model.Member.FirstName @Model.Member.LastName</dd>
                        <dt>Class</dt>
                        <dd>@Model.Class.CourseName</dd>
                        <dt>Semester</dt>
                        <dd>@(Model.IsSummerClass 
                                ? "Summer " + Model.Semester.DateStart.Year 
                                : Model.Semester.ToString())</dd>
                    </dl>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Instructor, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Instructor, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Instructor, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.MidtermGrade, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.MidtermGrade, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.MidtermGrade, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.FinalGrade, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FinalGrade, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.FinalGrade, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Dropped, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Dropped, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dropped, "", new { @class = "text-danger" })
                </div>
                
                <div class="checkbox form-group">
                    <label class="control-label">
                        @Html.EditorFor(model => model.IsSummerClass)
                        Summer Class
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>