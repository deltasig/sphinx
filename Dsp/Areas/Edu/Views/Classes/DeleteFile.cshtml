@model Dsp.Entities.ClassFile

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete File";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Details", new { id = Model.ClassId })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Classes
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="alert alert-danger">
                <p>Are you sure you want to delete this <strong>file</strong>?</p>
            </div>
            <div class="form-group">
                <dl class="dl-horizontal">
                    <dt>File</dt>
                    <dd>@Html.DisplayFor(model => model.AwsCode)</dd>
                </dl>
            </div>

            @using (Html.BeginForm(new { id = Model.ClassFileId, classId = Model.ClassId }))
            {
                @Html.AntiForgeryToken()

                <div>
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>