@using Microsoft.AspNet.Identity
@model Dsp.Areas.Edu.Models.ClassScheduleModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Class Schedule";
    ViewBag.Subtitle = Model.Member.ToString();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            @if (ViewBag != null && ViewBag.Message.Length > 0)
            {
                <div class="alert alert-warning">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <a href="@Url.Action("Index", "Roster", new {area = "Members"})" class="btn btn-sm btn-default">
                <i class="fa fa-caret-left"></i> To Roster
            </a>
        </div>
        <div class="col-xs-6 text-right">
            <div class="btn-group" role="group">
                @{ Html.RenderPartial("~/Areas/Edu/Views/Shared/_EduNavPartial.cshtml"); }
                <a href="@Url.Action("Schedule", "Classes", new {userName = Model.SelectedUserName, area = "Edu"})"
                   class="btn btn-default active">
                    Schedule
                </a>
                @if (User.IsInRole("Administrator") || User.IsInRole("Academics") || User.Identity.Name == Model.SelectedUserName)
                {
                    <a href="@Url.Action("Transcript", "Classes", new {userName = Model.SelectedUserName, area = "Edu"})"
                       class="btn btn-default">
                        Transcript
                    </a>
                }
            </div>
        </div>
        <br />
        <br />
    </div>
    <div class="row">
        @if (User.IsInRole("Administrator") || User.IsInRole("Academics") || User.Identity.Name == Model.SelectedUserName)
        {
            <div class="col-sm-12 col-md-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Add a New Class
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("AddClassTaken", "Classes", FormMethod.Post, new {@class = "", role = "form"}))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => Model.ClassTaken.UserId)
                            @Html.HiddenFor(m => Model.SelectedUserName)

                            <div class="form-group">
                                @Html.Label("Semester", new {@class = "control-label"})
                                @Html.DropDownListFor(m => Model.ClassTaken.SemesterId, Model.Semesters,
                                    new
                                    {
                                        @class = "form-control selectpicker",
                                        autocomplete = "off",
                                        id = "semester-dd",
                                        data_live_search = "true"
                                    })
                            </div>
                            <div class="form-group">
                                @{
                                    var list = Model.AllClasses.Select(c => new {c.ClassId, Text = c.CourseShorthand + ": " + c.CourseName});
                                }

                                @Html.Label("Class", new {@class = "control-label"})
                                @Html.DropDownListFor(m => Model.ClassTaken.ClassId, new SelectList(list, "ClassId", "Text"),
                                    new
                                    {
                                        @class = "form-control selectpicker",
                                        autocomplete = "off",
                                        id = "class-dd",
                                        data_live_search = "true"
                                    })
                            </div>

                            <div class="checkbox form-group">
                                <label class="control-label">
                                    @Html.EditorFor(model => Model.ClassTaken.IsSummerClass)
                                    Summer Class
                                </label>
                            </div>

                            <button type="submit" class="btn btn-default">Add</button>
                        }
                    </div>
                </div>
                <div class="alert alert-warning">
                    <strong>Regarding Summer Classes</strong>
                    <hr />
                    <p>
                        Select the Fall version of the year from the semester dropdown, then check the box.
                    </p>
                </div>
            </div>
        }
        <div class="col-sm-12 col-md-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            All Classes
                        </div>
                    </div>
                </div>
                @if (Model.ClassesTaken.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-condensed table-hover">
                            <thead>
                                <tr class="active">
                                    <th>Semester</th>
                                    <th>Course</th>
                                    @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                    {

                                        <th></th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ClassesTaken)
                                {
                                    <tr>
                                        <td>
                                            @(item.IsSummerClass
                                                  ? "Summer " + item.Semester.DateStart.Year
                                                  : item.Semester.ToString())
                                        </td>
                                        <td>
                                            <small>@item.Class.CourseShorthand</small>
                                            @item.Class.CourseName
                                            <span class="badge pull-right" data-toggle="tooltip" data-placement="top"
                                                  title="Credit Hour(s)">@item.Class.CreditHours</span>
                                        </td>
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                        {
                                            <td class="text-right">
                                                @Html.ActionLink("Edit", "EditClassTaken", "Classes", new { id = item.UserId, sid = item.SemesterId, cid = item.ClassId }, null) |
                                                @Html.ActionLink("Delete", "DeleteFromSchedule", "Classes", new { id = item.UserId, sid = item.SemesterId, cid = item.ClassId }, null)
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="panel-body">
                        No classes added!
                    </div>
                }
                <div class="panel-footer">
                    Total Credit Hours: @Model.ClassesTaken.Sum(c => c.Class.CreditHours)
                </div>
            </div>
        </div>
    </div>
</div>
