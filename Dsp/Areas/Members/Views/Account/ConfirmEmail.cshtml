@{
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
    ViewBag.Title = "Email Confirmation";
}
@section Title
{
    @Html.Partial("_TitleExternal")
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 col-sm-offset-1 col-md-offset-2 col-lg-offset-3 text-center">
            <h3>
                <small>
                    Your email has been confirmed successfully. 
                    Please follow the remaining instructions in your registration email.
                </small>
            </h3>
            <p>
                <a href="@Url.Action("SignIn", "Account", new {area = "Members"})"
                   class="btn btn-sm btn-default">
                    <i class="fa fa-angle-double-left"></i>
                    Go Back
                </a>
            </p>
        </div>
    </div>
</div>
