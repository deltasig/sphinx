@model Dsp.Entities.IncidentReport
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-2 col-xs-6">
            <p>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Incident Reports
                </a>
            </p>
        </div>
        <div class="col-sm-4 col-xs-6 text-right">
            @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
            {
                <a href="@Url.Action("Edit", new { id = Model.IncidentId })" class="btn btn-sm btn-info">
                    <i class="fa fa-wrench"></i> Edit
                </a>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>Date of Submission</dt>
                        <dd>@Model.DateTimeSubmitted.ToShortDateString()</dd>
                        <dt>Date of Incident</dt>
                        <dd>@Html.DisplayFor(model => model.DateTimeOfIncident)</dd>
                        <dt>@Html.DisplayNameFor(model => model.PolicyBroken)</dt>
                        <dd>@Html.DisplayFor(model => model.PolicyBroken)</dd>
                        @if (User.IsInRole("Administrator") || User.IsInRole("President") || User.IsInRole("Sergeant-at-Arms"))
                        {
                            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                            <dd class="well well-sm">@Html.DisplayFor(model => model.Description)</dd>
                        }
                        <dt>@Html.DisplayNameFor(model => model.OfficialReport)</dt>
                        <dd class="well well-sm">@Html.DisplayFor(model => model.OfficialReport)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
