@model Dsp.Entities.PhoneNumber
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Phone Number";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-inline">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PhoneNumberId)
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.Type)

                    <p>
                        Modifying "@Model.Type" Phone Number for @Model.Member.FirstName @Model.Member.LastName
                    </p>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "sr-only" })
                        @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control", placeholder = "Check format on the right" } })
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <br />
                    <button type="submit" class="btn btn-default">Save</button> |
                    @Html.ActionLink("Roster", "Index", "Roster", new { area = "Members" }, new { @class = "" }) |
                    @Html.ActionLink("Account for This Number", "Index", "Account", new { area = "Members", userName = Model.Member.UserName }, new { @class = "" })
                </div>
            }

        </div>
        <div class="col-sm-6 col-xs-12">
            <h3>Tips</h3>
            <div class="panel panel-warning">
                <div class="panel-heading">Phone Number Formats</div>
                <div class="panel-body">
                    <p>Please use one of the following formats:</p>
                    <h4>
                        US Numbers: <small>###-###-####</small>
                    </h4>
                    <h4>
                        International Numbers: <small>Number portion must be 10-15 characters long with an optional + symbol at the front (no spaces).</small>
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>