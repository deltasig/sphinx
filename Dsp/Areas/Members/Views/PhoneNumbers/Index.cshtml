@using Microsoft.AspNet.Identity
@model Dsp.Areas.Members.Models.PhoneIndexFilterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Phone Numbers";

    var mobile = Model.PhoneNumbers.Where(m => m.Type == "Mobile");
    var emergency = Model.PhoneNumbers.Where(m => m.Type == "Emergency");
}
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap-table.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <a class="pull-right" href="@Url.Action("Download", "PhoneNumbers")">
                <i class="fa fa-download fa-2x"></i>
            </a>
            @using (Html.BeginForm("Index", "PhoneNumbers", FormMethod.Get, new { @class = "", role = "form" }))
            {
                <input type="submit" value="Filter" class="btn btn-default" />

                <div class="checkbox-inline" style="margin-left:10px">
                    <label>
                        @Html.CheckBoxFor(model => model.Pledges)
                        <small>Pledges</small>
                    </label>
                </div>
                <div class="checkbox-inline">
                    <label>
                        @Html.EditorFor(model => model.Neophytes)
                        <small>Neophytes</small>
                    </label>
                </div>
                <div class="checkbox-inline">
                    <label>
                        @Html.EditorFor(model => model.Actives)
                        <small>Actives</small>
                    </label>
                </div>
                <div class="checkbox-inline">
                    <label>
                        @Html.EditorFor(model => model.Alumni)
                        <small>Alumni</small>
                    </label>
                </div>
                <div class="checkbox-inline">
                    <label>
                        @Html.EditorFor(model => model.Affiliates)
                        <small>Affiliates</small>
                    </label>
                </div>
                <div class="checkbox-inline">
                    <label>
                        @Html.EditorFor(model => model.Released)
                        <small>Released</small>
                    </label>
                </div>
                <br /><br />
            }
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li class="active"><a href="#mobile" data-toggle="pill">Mobile</a></li>
                <li><a href="#emergency" data-toggle="pill">Emergency</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="mobile">
                    <table data-toggle="table" data-classes="table table-condensed" 
                           data-search="true" data-pagination="true" data-page-size="100" data-sort-name="last-name" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th class="col-sm-3" data-sortable="true" data-field="first-name">First Name</th>
                                <th class="col-sm-3" data-sortable="true" data-field="last-name">Last Name</th>
                                <th class="col-sm-3" data-sortable="true" data-field="status">Status</th>
                                <th data-sortable="true" data-field="number">Phone Number</th>
                                <th class="col-sm-2"></th>
                            </tr>
                        </thead>

                        @foreach (var item in mobile)
                        {
                            <tr>
                                <td>@item.Member.FirstName</td>
                                <td>@item.Member.LastName</td>
                                <td>@item.Member.MemberStatus.StatusName</td>
                                <td class="@(string.IsNullOrEmpty(item.Number) ? "text-danger" : "")">
                                    @if (string.IsNullOrEmpty(item.Number))
                                    {
                                        @: missing
                                    }
                                    else
                                    {
                                        <a href="tel:@item.Number">
                                            @item.Number
                                        </a>
                                    }
                                </td>
                                <td class="text-right">
                                    @if (User.IsInRole("Administrator") || User.IsInRole("Secretary") || item.UserId == User.Identity.GetUserId<int>())
                                    {
                                        <a class="" href="@Url.Action("Edit", "PhoneNumbers", new { id = item.PhoneNumberId })">
                                            Edit
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="tab-pane" id="emergency">
                    <table data-toggle="table" data-classes="table table-condensed" 
                        data-search="true" data-pagination="true" data-page-size="100" data-sort-name="last-name" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th class="col-sm-3" data-sortable="true" data-field="first-name">First Name</th>
                                <th class="col-sm-3" data-sortable="true" data-field="last-name">Last Name</th>
                                <th class="col-sm-3" data-sortable="true" data-field="status">Status</th>
                                <th data-sortable="true" data-field="number">Phone Number</th>
                                <th class="col-sm-2"></th>
                            </tr>
                        </thead>

                        @foreach (var item in emergency)
                        {
                            <tr>
                                <td>@item.Member.FirstName</td>
                                <td>@item.Member.LastName</td>
                                <td>@item.Member.MemberStatus.StatusName</td>
                                <td class="@(string.IsNullOrEmpty(item.Number) ? "text-danger" : "")">
                                    @if (string.IsNullOrEmpty(item.Number))
                                    {
                                        @: missing
                                    }
                                    else
                                    {
                                        <a href="tel:@item.Number">
                                            @item.Number
                                        </a>
                                    }
                                </td>
                                <td class="text-right">
                                    @if (User.IsInRole("Administrator") || User.IsInRole("Secretary") || item.UserId == User.Identity.GetUserId<int>())
                                    {
                                        <a class="" href="@Url.Action("Edit", "PhoneNumbers", new { id = item.PhoneNumberId })">
                                            Edit
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/bootstrap-table.js"></script>
@section scripts
{
    <script type="text/javascript">

    </script>
}