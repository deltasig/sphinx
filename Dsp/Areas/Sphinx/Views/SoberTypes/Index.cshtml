@model IEnumerable<Dsp.Entities.SoberType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sober Types";
}
@section styles {
    @Styles.Render("~/content/bootstrap-table")
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6">
            <p>
                <a href="@Url.Action("Manager", "Sobers", new {area = "Sphinx"})" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Sober Manager
                </a>
            </p>
        </div>
        <div class="col-xs-6 text-right">
            <p>
                @Html.ActionLink("Create New", "Create", "SoberTypes", new { area = "Sphinx" }, new { @class = "btn btn-sm btn-success" })
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-classes="table table-condensed"
                           data-search="true" data-pagination="true" data-page-size="25" data-sort-name="name" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th class="col-sm-3" data-sortable="true" data-field="name">Name</th>
                                <th data-sortable="true" data-field="description">Description</th>
                                <th class="col-sm-2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@Html.Raw(item.Description)</td>
                                    <td class="text-right">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.SoberTypeId })
                                        @if (!item.Signups.Any())
                                        {
                                            @: |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.SoberTypeId })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/bootstrap-table")
}