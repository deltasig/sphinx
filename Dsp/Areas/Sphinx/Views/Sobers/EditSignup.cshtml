@model Dsp.Areas.Dsp.Models.EditSoberSignupModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Sober Signup";
}
@section Title
{
    @Html.Partial("_Title")
}
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap-select.css">

<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Html.BeginForm("EditSignup", "Sobers", FormMethod.Post, new {@class = "", role = "form"}))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                        @Html.HiddenFor(m => m.SoberSignup.SignupId)

                        <div class="form-group">
                            <h4>
                                @Model.SoberSignup.SoberType.Name <br/>
                                <small>
                                    @Model.SoberSignup.DateOfShift.DayOfWeek,
                                    @Model.SoberSignup.DateOfShift.ToShortDateString()
                                </small>
                            </h4>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.SelectedMember, new {@class = "control-label"})
                            @Html.DropDownListFor(m => Model.SelectedMember, Model.Members, 
                                    new { @class = "form-control selectpicker", autocomplete = "off", data_live_search = "true" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => Model.SoberSignup.Description, new {@class = "control-label"})
                            @Html.EditorFor(m => Model.SoberSignup.Description, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default pull-right"/>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/bootstrap-select.js"></script>
@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#class-dd").select2();
        });

    </script>
}