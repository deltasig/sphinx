@using Dsp.Entities
@model IEnumerable<SoberSignup>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sober Schedule";
}
@section styles {
    @Styles.Render("~/content/bootstrap-table")
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-warning">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">

        </div>
        <div class="col-sm-6 text-right">
            <p>
                <a href="@Url.Action("Report", "Sobers", new { area = "Sphinx" })" class="btn btn-sm btn-default">
                    <i class="fa fa-file-text-o"></i> Sober Report
                </a>
                @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                {
                    <a href="@Url.Action("Manager", "Sobers", new {area = "Sphinx"})" class="btn btn-sm btn-info">
                        <i class="fa fa-wrench"></i> Manage
                    </a>
                }
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-classes="table table-condensed table-hover"
                           data-search="true" data-pagination="true" data-page-size="25">
                        <thead>
                            <tr>
                                <th class="col-sm-2" data-sortable="true" data-field="date">Date</th>
                                <th class="col-sm-3" data-sortable="true" data-field="request-type">Type</th>
                                <th data-sortable="true" data-field="description">Description</th>
                                <th class="col-sm-2" data-sortable="true" data-field="volunteer">Volunteer</th>
                                @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                {
                                    <th class="col-sm-2"></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(s => s.DateOfShift).ThenBy(s => s.SoberTypeId).ThenBy(s => s.Description))
                            {
                                <tr>
                                    <td>@item.DateOfShift.ToString("MM-dd-yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("Info", "SoberTypes", new { id = item.SoberTypeId })">
                                            <i data-toggle="tooltip" data-placement="top" class="fa fa-info-circle text-info"
                                               title="Click to learn about this job."></i>
                                        </a>
                                        @item.SoberType.Name
                                    </td>
                                    <td>@item.Description</td>
                                    <td>
                                        @if (item.UserId == null)
                                        {
                                            if (!User.IsInRole("Pledge") || item.SoberType.Name == "Officer")
                                            {
                                                @Html.ActionLink("Sign up", "Signup", "Sobers", new { id = item.SignupId, area = "Sphinx" }, null)
                                            }
                                        }
                                        else if (item.Member.UserName == User.Identity.Name || User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                        {
                                            using (Html.BeginForm("CancelSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" },
                                                FormMethod.Get, new { style = "display: inline" }))
                                            {
                                                <button type="submit" class="btn btn-sm btn-link" style="padding:0;  color:#d9534f; display:inline">
                                                    <i class="fa fa-minus-square"></i>
                                                </button>
                                                @item.Member.ToString()
                                            }
                                        }
                                        else
                                        {
                                            @item.Member.ToString()
                                        }
                                    </td>
                                    @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                    {
                                        <td class="text-right">
                                            <a class="" href="@Url.Action("EditSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" })">
                                                Edit
                                            </a> |
                                            <a class="" href="@Url.Action("DeleteSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" })">
                                                Delete
                                            </a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <iframe src="https://www.google.com/calendar/embed?showTitle=0&amp;showPrint=0&amp;showTabs=0&amp;showCalendars=0&amp;height=600&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=dspeboard%40gmail.com&amp;color=%23125A12&amp;ctz=America%2FChicago"
                    style=" border-width:0 " width="100%" height="600" frameborder="0" scrolling="no"></iframe>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/bootstrap-table")
}
