@model IEnumerable<Dsp.Entities.Meal>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Meals";
}
@section styles {
    @Styles.Render("~/content/bootstrap-table")
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6">
            <div class="btn-group" role="group" aria-label="...">
                @{ Html.RenderPartial("~/Areas/Kitchen/Views/Shared/_MealsNavPartial.cshtml"); }
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <p>
                @Html.ActionLink("Create New", "Create", "Meals", new { area = "Kitchen" }, new { @class = "btn btn-sm btn-success" }) 
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-classes="table table-condensed"
                           data-search="true" data-pagination="true" data-page-size="25" data-sort-name="meal" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th data-sortable="true" data-field="meal">Meal</th>
                                <th class="col-sm-3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ToString()</td>
                                    <td class="text-right">
                                        @Html.ActionLink("Reorder", "Reorder", new { id = item.MealId }) |
                                        @Html.ActionLink("Contents", "Edit", new { id = item.MealId })
                                        @if (!item.MealsToPeriods.Any() || !item.MealsToItems.Any())
                                        {
                                            @: |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.MealId })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/bootstrap-table")
}
