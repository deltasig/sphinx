@model Dsp.Web.Entities.ServiceEvent
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Event";
    ViewBag.Subtitle = Model.EventName;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Index", new { s = ViewBag.SemesterId })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Events
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="alert alert-danger">
                <p>Are you sure you want to delete this <strong>event</strong>?</p>
            </div>
            <div class="form-group">
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.EventName)</dt>
                    <dd>@Html.DisplayFor(model => model.EventName)</dd>
                    <dt>@Html.DisplayNameFor(model => model.DateTimeOccurred)</dt>
                    <dd>@Html.DisplayFor(model => model.DateTimeOccurred)</dd>
                    <dt>@Html.DisplayNameFor(model => model.DurationHours)</dt>
                    <dd>@Html.DisplayFor(model => model.DurationHours)</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <input type="submit" value="Delete" class="btn btn-default" /> 
            }
        </div>
    </div>
</div>
