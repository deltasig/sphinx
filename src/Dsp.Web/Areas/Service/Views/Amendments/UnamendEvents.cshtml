@model ServiceEventAmendment
@{
    ViewBag.Title = "Delete Service Event Amendment";
    ViewBag.Subtitle = Model.Semester;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Index", "Amendments", new { sid = Model.SemesterId })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Amendments
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="alert alert-danger">
                <p>Are you sure you want to delete this amendment?</p>
            </div>
            <div class="form-group">
                <dl class="dl-horizontal">
                    <dt>Member</dt>
                    <dd>@Model.Member.FirstName @Model.Member.LastName</dd>
                    <dt># of Events</dt>
                    <dd>@Html.DisplayFor(model => model.NumberEvents)</dd>
                    <dt>Reason</dt>
                    <dd>@Html.DisplayFor(model => model.Reason)</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.SemesterId)

                <input type="submit" value="Delete" class="btn btn-default btn-danger" />
            }
        </div>
    </div>
</div>
