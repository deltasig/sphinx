@model Dsp.Data.Entities.ServiceHour
@{
    ViewBag.Title = "Delete Service Hour Submission";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Index", new { s = ViewBag.SemesterId })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Hours
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="alert alert-danger">
                <p>Are you sure you want to delete the following submission?</p>
            </div>
            <div class="form-group">
                <dl class="dl-horizontal">
                    <dt>Member</dt>
                    <dd>@Model.Member.FirstName @Model.Member.LastName</dd>
                    <dt>Event</dt>
                    <dd>@Html.DisplayFor(model => model.Event.EventName)</dd>
                    <dt>Hours</dt>
                    <dd>@Html.DisplayFor(model => model.DurationHours)</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.EventId)
                @Html.HiddenFor(model => model.UserId)

                <input type="submit" value="Delete" class="btn btn-default" />
            }
        </div>
    </div>
</div>
