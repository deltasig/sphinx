@model Dsp.Web.Areas.Service.Models.ServiceAmendmentModel
@{
    ViewBag.Title = "Service Amendments";
    ViewBag.Subtitle = Model.Semester;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6">
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="semester-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Change Semester
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="semester-dropdown">
                    @foreach (var s in Model.SemesterList)
                    {
                        <li><a href="@Url.Action("Amendments", new { sid = s.Value })">@s.Text</a></li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <p>
                <a href="@Url.Action("Index", "Hours", new { sid = Model.Semester.SemesterId })" class="btn btn-sm btn-default">
                    Service Hours
                </a>
                <a href="@Url.Action("Index", "Events", new { sid = Model.Semester.SemesterId })" class="btn btn-sm btn-default">
                    Service Events
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Hour Amendments
                    <a href="@Url.Action("AddHourAmendment", "Hours", new { sid = Model.Semester.SemesterId })" class="btn btn-xs btn-success pull-right">
                        <i class="fa fa-plus-circle"></i>
                    </a>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th class="col-xs-3">Member</th>
                        <th class="col-xs-3">Reason</th>
                        <th class="col-xs-3">Amount (hrs)</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.ServiceHourAmendments.Any())
                    {
                        foreach (var a in Model.ServiceHourAmendments.OrderBy(m => m.Member.LastName))
                        {
                            <tr>
                                <td>@a.Member.ToString()</td>
                                <td>@a.Reason</td>
                                <td>@a.AmountHours</td>
                                <td class="text-right">
                                    @using (Html.BeginForm("DeleteHourAmendment", "Hours", new { aid = a.Id }, FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-xs btn-danger">Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="warning">
                            <td colspan="4">No amendments found.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Event Amendments
                    <a href="@Url.Action("AddEventAmendment", "Hours", new { sid = Model.Semester.SemesterId })" class="btn btn-xs btn-success pull-right">
                        <i class="fa fa-plus-circle"></i>
                    </a>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th class="col-xs-3">Member</th>
                            <th class="col-xs-3">Reason</th>
                            <th class="col-xs-3">Number of Events</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ServiceEventAmendments.Any())
                        {
                            foreach (var a in Model.ServiceEventAmendments.OrderBy(m => m.Member.LastName))
                            {
                                <tr>
                                    <td>@a.Member.ToString()</td>
                                    <td>@a.Reason</td>
                                    <td>@a.NumberEvents</td>
                                    <td class="text-right">
                                        @using (Html.BeginForm("DeleteEventAmendment", "Hours", new { aid = a.Id }, FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-xs btn-danger">Delete</button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="warning">
                                <td colspan="4">No amendments found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
