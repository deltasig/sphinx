@if (Request.IsAuthenticated)
{
    @Html.ActionLink("Schedule", "Schedule", "Meals", new { area = "Kitchen" }, new
    {
        @class = "btn btn-sm btn-default " + (ViewBag.Title == "Meal Schedule" ? "active" : "")
    }) 
    if (User.IsInRole("Administrator") || User.IsInRole("House Steward"))
    {
        @Html.ActionLink("Meals", "Index", "Meals", new { area = "Kitchen" }, new
    {
        @class = "btn btn-sm btn-default " + (ViewBag.Title == "Meals" ? "active" : "")
    })
    }
    @Html.ActionLink("Items", "Index", "MealItems", new { area = "Kitchen" }, new
    {
        @class = "btn btn-sm btn-default " + (ViewBag.Title == "Meal Items" ? "active" : "")
    }) 
    if (User.IsInRole("Administrator") || User.IsInRole("House Steward"))
    {    
        @Html.ActionLink("Periods", "Index", "MealPeriods", new { area = "Kitchen" }, new
        {
            @class = "btn btn-sm btn-default " + (ViewBag.Title == "Meal Periods" ? "active" : "")
        }) 
    }
}