@using Dsp.Data.Entities
@using Dsp.Web.Areas.Nme.Models
@using Microsoft.AspNet.Identity
@using System.Web.Mvc.Html
@model BroQuestIndexModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "BroQuest";
    var hasElevatedPermissions = User.IsInRole("Administrator") || User.IsInRole("New Member Educator");
}

<div class="container-fluid">
    <div class="row row-space">
        <div class="col-md-6">
            @if (Model.SemesterList.Any())
            {
                <div class="dropdown">
                    <button class="btn btn-sm btn-default dropdown-toggle" type="button" id="semester-dropdown"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Change Semester
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="semester-dropdown">
                        @foreach (var s in Model.SemesterList)
                        {
                            <li><a href="@Url.Action("Index", new { sid = s.Value })">@s.Text</a></li>
                        }
                    </ul>
                </div>
            }
        </div>
        <div class="col-md-6 text-right">
            @if (hasElevatedPermissions)
            {
                <a href="@Url.Action("Manager")" class="btn btn-sm btn-default">
                    <i class="fa fa-wrench"></i> Manager
                </a>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            

        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript">



    </script>
}