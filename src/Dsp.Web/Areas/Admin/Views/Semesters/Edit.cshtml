@model Dsp.Data.Entities.Semester
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Semester";
}
@section styles {
    @Styles.Render("~/content/datetimepicker")
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Semesters
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <h3>@Model.ToString() <small>Semester</small></h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.SemesterId)

                <div class="form-group">
                    @Html.LabelFor(m => m.DateStart, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group date" id="dtp1">
                        @Html.EditorFor(m => m.DateStart, new { htmlAttributes = new { @class = "form-control", type = "datetime" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.DateStart, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DateEnd, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group date" id="dtp2">
                        @Html.EditorFor(m => m.DateEnd, new { htmlAttributes = new { @class = "form-control", type = "datetime" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.DateEnd, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.TransitionDate, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group date" id="dtp3">
                        @Html.EditorFor(m => m.TransitionDate, new { htmlAttributes = new { @class = "form-control", type = "datetime" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.TransitionDate, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.MinimumServiceHours, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.MinimumServiceHours, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(m => m.MinimumServiceHours, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.MinimumServiceEvents, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.MinimumServiceEvents, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(m => m.MinimumServiceEvents, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/datetimepicker")
    <script type="text/javascript">

        $(function () {
            $("#dtp1").datetimepicker({
                format: "MM/DD/YYYY"
            });
            $("#dtp2").datetimepicker({
                format: "MM/DD/YYYY"
            });
            $("#dtp3").datetimepicker({
                format: "MM/DD/YYYY"
            });
            $("#dtp4").datetimepicker();
            $("#dtp5").datetimepicker();
        });

    </script>
}