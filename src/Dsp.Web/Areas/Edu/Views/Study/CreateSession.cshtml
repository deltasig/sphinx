@model Dsp.Web.Entities.StudySession
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Study Session";
}
@section styles {
    @Styles.Render("~/content/datetimepicker")
}

<div class="container-fluid">
    <div class="row row-space">
        <div class="col-xs-12">
            <a href="@Url.Action("Index")" class="btn btn-sm btn-default">
                <i class="fa fa-caret-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Location, new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-map-marker"></span>
                        </span>
                        @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    </div>
                    @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BeginsOn, new { @class = "control-label" })
                    <div class="input-group date" id="dtp1">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.EditorFor(m => m.BeginsOn, new { htmlAttributes = new { @class = "form-control", type = "datetime" } })
                    </div>
                    @Html.ValidationMessageFor(m => m.BeginsOn, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EndsOn, new {@class = "control-label"})
                    <div class="input-group date" id="dtp2">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.EditorFor(m => m.EndsOn, new {htmlAttributes = new {@class = "form-control", type = "datetime"}})
                    </div>
                    @Html.ValidationMessageFor(m => m.EndsOn, "", new {@class = "text-danger"})
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/datetimepicker")
    <script type="text/javascript">
        $(function () {
            $("#dtp1").datetimepicker();
            $("#dtp2").datetimepicker();
        });
    </script>
}