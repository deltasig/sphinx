@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    @Html.ActionLink("Classes", "Index", "Classes", null, new
    {
        @class = "btn btn-default " + (ViewBag.Title.Contains("Class") ? "active" : "")
    })
    @Html.ActionLink("Majors", "Index", "Majors", null, new
    {
        @class = "btn btn-default " + (ViewBag.Title.Contains("Major") ? "active" : "")
    })
    if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
    {
        @Html.ActionLink("Departments", "Index", "Departments", null, new
        {
            @class = "btn btn-default " + (ViewBag.Title.Contains("Department") ? "active" : "")
        })
    }
    @Html.ActionLink("Schedule", "Schedule", "Classes", new
    {
        userName = ViewBag.UserName ?? User.Identity.GetUserName()
    }, new
    {
        @class = "btn btn-default " + (ViewBag.Title.Contains("Schedule") ? "active" : "")
    })
}