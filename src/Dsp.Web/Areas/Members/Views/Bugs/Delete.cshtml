@model BugReport
@{
    ViewBag.Title = "Delete a Bug Report";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <p>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Bug Reports
                </a>
            </p>
        </div>
        <div class="col-md-3 text-right">

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <p>
                        Are you sure you want to delete bug report #@Model.Id?
                    </p>
                </div>

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>
