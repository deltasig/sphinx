@model UnregisterModel

<div class="panel panel-default">
    <div class="panel-heading">Unregister</div>
    <div class="panel-body">
        @using (Html.BeginForm("Unregister", "Account", FormMethod.Post, new { @class = "", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                <div class="alert alert-warning">
                    <strong>Warning!</strong>  This will only remove user accounts that have not interacted with the system.
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Choose a member", new { @class = "control-label" })
                @Html.DropDownListFor(m => m.SelectedUserId, Model.Users, new
                {
                    @class = "form-control selectpicker",
                    autocomplete = "off",
                    data_live_search = "true",
                    data_size = "10"
                })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Unregister</button>
            </div>
        }
    </div>
</div>