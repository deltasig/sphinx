<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @RenderSection("AdditionalMeta", false)
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/Favicon-16x16.png" />
    @Styles.Render("~/content/open-sans")  
    @Styles.Render("~/content/bootstrap-core")
    @Styles.Render("~/content/custom-css")
    @Styles.Render("~/content/font-awesome")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/jquery")
</head>
<body class="external-body">
    <div class="page-row">
        @Html.Partial("_NavExternal")
        @RenderSection("Title", required: false)
        @RenderBody()
    </div>

    <div class="page-row">
        @Html.Partial("Footer")
    </div>

    @Scripts.Render("~/bundles/bootstrap-core")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">

        $(function() {
            setTimeout(function() {
                $("#success-message").alert('close');
                $("#failure-message").alert('close');
                $("#message").alert('close');
            }, 10000);

            $("[data-toggle=\"tooltip\"]").tooltip();
            $("[data-toggle=\"popover\"]").tooltip();

            function offsetAnchor() {
                if (location.hash.length !== 0) {
                    window.scrollTo(window.scrollX, window.scrollY - 50);
                }
            }

            // Captures click events of all <a> elements with href starting with #
            $(document).on('click', 'a[href^="#"]', function (event) {
                // Click events are captured before hashchanges. Timeout
                // causes offsetAnchor to be called after the page jump.
                window.setTimeout(function () {
                    offsetAnchor();
                }, 0);
            });

            // Set the offset when entering page with hash present in the url
            window.setTimeout(offsetAnchor, 0);
        });

    </script>
</body>
</html>
