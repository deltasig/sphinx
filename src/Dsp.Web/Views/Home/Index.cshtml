@{
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
    ViewBag.Title = "Delta Sigma Phi";
    var cstZone = TimeZoneInfo.FindSystemTimeZoneById("Central Standard Time");
    var currentTime = TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, cstZone);
    var imageClass = currentTime.Hour >= 19 || currentTime.Hour <= 7 ? "night-img" : "day-img";
    var textColor = currentTime.Hour >= 19 || currentTime.Hour <= 7 ? "color: whitesmoke" : "";
}
@section AdditionalMeta{
    <meta name="description"
          content="We are redefining the fraternity experience by showing that a quality fraternity enhances the
                   college experience beyond that of any other college organization.">
}

<div class="container-fluid home @imageClass" style="height: 750px; padding: 50px 0; background-size: cover !important;">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 jumbotron" style="background: none; padding: 10px; margin-top: -25px; @textColor">
                <h1><strong>DELTA SIGMA PHI</strong></h1>
                <h4 style="margin: 0 0 0 3px">DELTA EPSILON CHAPTER</h4>
                <h4 style="margin: 0 0 0 3px">MISSOURI S&amp;T</h4>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid home">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>
                    <strong><em>Delta Sig</em></strong> is redefining the fraternity experience.  We are on a mission to show
                    that a quality fraternity can enhance the college experience beyond that of any other college organization.
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid home dark">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 hidden-xs">
                <span class="fa-stack visible-md visible-lg" style="font-size: 5em">
                    <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                    <i class="fa fa-group fa-stack-1x" style="color: #282725"></i>
                </span>
                <span class="fa-stack hidden-md hidden-lg" style="font-size: 4em">
                    <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                    <i class="fa fa-group fa-stack-1x" style="color: #282725"></i>
                </span>
            </div>
            <div class="col-sm-10">
                <h3>
                    <span class="fa-stack visible-xs-inline-block">
                        <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                        <i class="fa fa-group fa-stack-1x" style="color: #282725"></i>
                    </span>
                    Prospective Members
                </h3>
                <p>
                    Our recruitment process is the way it should be: <strong>values-based</strong>.
                    For those who are right for Delta Sig, you already believe what we believe.
                    You strive to make a positive impact every day in the world around you, and you realize that surrounding yourself with like-minded individuals will accelerate the realization of that vision.
                    If Delta Sig isn't the right place for you, we will help you find a fraternity that is.
                    <br />
                    @Html.ActionLink("Learn More »", "Recruitment", "Home")
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 hidden-xs">
                <span class="fa-stack visible-md visible-lg" style="font-size: 5em">
                    <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                    <i class="fa fa-graduation-cap fa-stack-1x" style="color: #282725"></i>
                </span>
                <span class="fa-stack hidden-md hidden-lg" style="font-size: 4em">
                    <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                    <i class="fa fa-graduation-cap fa-stack-1x" style="color: #282725"></i>
                </span>
            </div>
            <div class="col-sm-10">
                <h3>
                    <span class="fa-stack visible-xs-inline-block">
                        <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                        <i class="fa fa-graduation-cap fa-stack-1x" style="color: #282725"></i>
                    </span>
                    Alumni Involvement
                </h3>
                <p>
                    After a decade-long absence, we are back at Missouri S&amp;T and we have quickly risen to be one of the most influental student organizations on campus.
                    While making an impact is great, none of it would have been possible without support from our alumni.
                    We invite you to connect with us!
                    <br />
                    <a href="http://www.deltasigrollaalumni.com/" target="_blank">Alumni Website »</a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 hidden-xs">
                <span class="fa-stack visible-md visible-lg" style="font-size: 5em">
                    <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                    <i class="fa fa-globe fa-stack-1x" style="color: #282725"></i>
                </span>
                <span class="fa-stack hidden-md hidden-lg" style="font-size: 4em">
                    <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                    <i class="fa fa-globe fa-stack-1x" style="color: #282725"></i>
                </span>
            </div>
            <div class="col-sm-10">
                <h3>
                    <span class="fa-stack visible-xs-inline-block">
                        <i class="fa fa-circle fa-stack-2x" style="color: #414141"></i>
                        <i class="fa fa-globe fa-stack-1x" style="color: #282725"></i>
                    </span>
                    Community Outreach
                </h3>
                <p>
                    Delta Sig wants to connect with you!  We are committed to building relationships on campus and throughout the community.
                    If you have an opportunity to make Missouri S&amp;T and the community a better place, let us know and we will do our best to help you.
                    <br />
                    @Html.ActionLink("Contact Us »", "Contacts", "Home")
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid home" id="directions" style="margin-bottom: -50px">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="row row-space">
                    <div class="col-sm-6 col-md-12">
                        <h2 style="margin-top:0">
                            <i class="fa fa-fw fa-map-marker"></i> Our Location
                        </h2>
                        <p>
                            <a href="https://www.google.com/maps/dir//37.949841,-91.772336/"
                               target="_blank" class="btn btn-default">
                                <i class="fa fa-map-o"></i> Google Maps Directions
                            </a>
                        </p>
                        <address>
                            <strong>Delta Sigma Phi</strong>
                            <small>Delta Epsilon Chapter</small><br>
                            215 W 8th St<br>
                            Rolla, MO 65401, USA<br>
                        </address>
                    </div>
                    <div class="col-sm-6 col-md-12">
                        <h2><i class="fa fa-fw fa-calendar"></i> Schedule a Visit</h2>
                        <p>
                            <a href="@Url.Action("Contacts", "Home")"
                               class="btn btn-sm btn-default">
                                <i class="fa fa-fw fa-envelope"></i> Go to Contacts page
                            </a>
                        </p>
                        <p>Send an email to our Vice President of Growth</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <a href="~/images/dsp-directions.png">
                    <img class="img-responsive" src="~/Images/dsp-directions.png" />
                </a>
            </div>
        </div>
    </div>
</div>
