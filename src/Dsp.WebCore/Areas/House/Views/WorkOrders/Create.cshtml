@model WorkOrder
@{
    ViewBag.Title = "Create Work Order";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <p>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary">
                    <i class="fa fa-caret-left"></i> Back
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <form asp-controller="Incidents" asp-action="Create" asp-antiforgery="true" method="post" role="form">
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Title" class="form-label">Description</label>
                    <textarea type="text" class="form-control" asp-for="Title"></textarea>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
        <div class="col-sm-6">
            <div class="alert alert-info">
                <h4 class="alert-heading">Submission Info</h4>
                <hr />
                <p>
                    The work order should contain a description of as many of the following details as possible:
                    <ul>
                        <li>What is broken</li>
                        <li>Where it is located</li>
                        <li>How it was broken</li>
                        <li>What can be done to resolve this (if known)</li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
</div>
