@model Dsp.Data.Entities.Room
@{
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
    ViewBag.Title = "Create New Room";
    ViewBag.Subtitle = ViewBag.Semester;
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <p>
                <a href="@Url.Action("Index", new { sid = Model.SemesterId })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Rooms
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.HiddenFor(model => Model.SemesterId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new {@class = "control-label"})
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control", autocomplete = "off"}})
                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.MaxCapacity, new {@class = "control-label"})
                    @Html.EditorFor(model => model.MaxCapacity, new {htmlAttributes = new {@class = "form-control", autocomplete = "off"}})
                    @Html.ValidationMessageFor(model => model.MaxCapacity, "", new {@class = "text-danger"})
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default"/>
                </div>
            }
        </div>
        <div class="col-sm-6">
            <div class="alert alert-warning">
                <strong>
                    <i class="fa fa-exclamation-triangle"></i> 
                    Semester Selection
                </strong>
                <hr />
                <p>
                    Rooms are tied to a particular semester. This enables the website to track changes in capacity by room and semester.
                    The semester you're creating a room for is selected on the rooms page prior to navigating here.
                    You can check the page subtitle above to verify which semester for which you're creating a room.
                </p>
            </div>
            <div class="alert alert-warning">
                <strong>
                    <i class="fa fa-exclamation-triangle"></i> 
                    Generation
                </strong>
                <hr/>
                <p>
                    Whenever you encounter a semester that has no rooms, you should let the website the generate the defaults for you
                    and then modify from there. This will safe you time as the generation feature will just copy the previous semester's
                    room information, or if that's not available, generate them based on some predetermined logic.
                </p>
            </div>
            <div class="alert alert-warning">
                <strong>
                    <i class="fa fa-exclamation-triangle"></i> 
                    Name
                </strong>
                <hr />
                <p>
                    All of the house names should be generated already if you followed the other instructions.
                    <em>
                        Entering names that are only numerical will not work so talk to
                        your administrator if you need this.
                    </em> 
                    Adding additional rooms such as "Rugby House", "Bungalow", or "Xi House" is fine.
                </p>
            </div>
            <div class="alert alert-warning">
                <strong>
                    <i class="fa fa-exclamation-triangle"></i> 
                    Maximum Capacity
                </strong>
                <hr />
                <p>
                    Capacity values range from 0 to 10.  Enter a value of 0 if the room capacity is unknown or if it does not matter.
                </p>
            </div>
        </div>
    </div>
</div>