@model EditEnrollmentModel
@{
    ViewBag.Title = "Edit Class Enrollment";
}

<div class="container-fluid">
    <div class="row row-space">
        <div class="col">
            <a href="@Url.Action("Schedule", new { userName = Model.Enrollment.User.UserInfo.UserName})" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left">
                </i> Back to @Model.Enrollment.User.FirstName's Schedule
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Enrollment.UserId)
                @Html.HiddenFor(model => model.Enrollment.ClassId)
                @Html.HiddenFor(model => model.Enrollment.SemesterId)
                @Html.HiddenFor(model => model.Enrollment.User.UserInfo.UserName)
                @Html.HiddenFor(model => model.Enrollment.User.FirstName)
                @Html.HiddenFor(model => model.Enrollment.User.LastName)

                <div class="form-group">
                    <dl class="dl-horizontal">
                        <dt>Member</dt>
                        <dd>
                            <a href="@Url.Action("Index", "Account", new { area = "Members", userName = Model.Enrollment.User.UserInfo.UserName })">
                                @Model.Enrollment.User.FirstName @Model.Enrollment.User.LastName
                            </a>
                        </dd>
                        <dt>Class</dt>
                        <dd>
                            <a href="@Url.Action("Details", "Classes", new { id = Model.Enrollment.ClassId })">
                                @Model.Enrollment.Class.CourseName
                            </a>
                        </dd>
                        <dt>Semester</dt>
                        <dd>
                            @(Model.Enrollment.IsSummerClass
                                ? "Summer " + Model.Enrollment.Semester.DateStart.Year
                                : Model.Enrollment.Semester.ToString())
                        </dd>
                    </dl>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="checkbox form-group">
                            <label class="control-label">
                                @Html.EditorFor(model => model.Enrollment.IsSummerClass)
                                <strong>Summer Class</strong>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>