@model CreateClassModel
@{
    ViewBag.Title = "Create New Class";
}

<div class="container-fluid">
    <div class="row row-space">
        <div class="col">
            <a href="@Url.Action("Index")" class="btn btn-sm btn-default">
                <i class="fa fa-caret-left"></i> Back to Classes
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label">Department</label>
                    @Html.DropDownListFor(model => Model.Class.DepartmentId, Model.Departments, null, new { @class = "form-control selectpicker", data_live_search = "true" })
                    @Html.ValidationMessageFor(model => model.Class.DepartmentId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Class.CourseShorthand, new { @class = "control-label" })
                    @Html.EditorFor(model => model.Class.CourseShorthand, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Class.CourseShorthand, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Class.CourseName, new { @class = "control-label" })
                    @Html.EditorFor(model => model.Class.CourseName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Class.CourseName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Class.CreditHours, new { @class = "control-label" })
                    @Html.EditorFor(model => model.Class.CreditHours, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Class.CreditHours, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            }
        </div>
        <div class="col-md-6">
            <partial name="~/Areas/School/Views/Classes/_ClassInstructions.cshtml" />
        </div>
    </div>
</div>
