@model IEnumerable<UserType>
@{
    ViewBag.Title = "User Types";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 text-end">
            <p>
                <a class="btn btn-success" href="@Url.Action("Create", "Statuses", new { area = "Admin" })">Create</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr class="active">
                            <th>Name</th>
                            <th class="col-xs-2"></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StatusName</td>
                            <td class="text-end">
                                <a href="@Url.Action("Edit", new { id = item.StatusId })">Edit</a>
                                @if (!item.Users.Any())
                                {
                                    @:|
                                    <a href="@Url.Action("Delete", new { id = item.StatusId })">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
