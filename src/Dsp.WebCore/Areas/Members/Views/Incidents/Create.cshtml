@model IncidentReport
@{
    ViewBag.Title = "Create Incident Report";
    var now = DateTime.UtcNow.FromUtcToCst().ToString("yyyy-MM-ddTHH:mm");
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <p>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary">
                    <i class="fa fa-caret-left"></i> Back
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="alert alert-warning">
                <h4 class="alert-heading">Before You Submit</h4>
                <hr />
                <p class="mb-0">
                    If you're about to submit an incident report for something where the police should be involved,
                    <strong>contact the police right now</strong>.
                    This form is not a place for you to avoid proper reporting of crimes.
                    If you would like to document an incident after contacting the authorities as it may lead to
                    additional, fraternity-specific action, you may do so.
                </p>
            </div>

            <form asp-controller="Incidents" asp-action="Create" asp-antiforgery="true" method="post" role="form">
                @Html.HiddenFor(m => m.InvestigationNotes, new { @Value = "" })

                <div class="mb-3">
                    <label for="DateTimeOfIncident" class="form-label">Date and Time of Incident</label>
                    <input type="datetime-local" class="form-control" asp-for="DateTimeOfIncident" value="@now">
                    <span asp-validation-for="DateTimeOfIncident" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Descripton</label>
                    <textarea type="text" class="form-control" asp-for="Description" rows="10"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" asp-for="ShareIdentity">
                    <label class="form-check-label" for="ShareIdentity">
                        Share Identity
                        @Html.ValidationMessageFor(m => m.ShareIdentity, "", new { @class = "text-info" })
                    </label>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
        <div class="col-sm-6">
            <div class="alert alert-info">
                <h4 class="alert-heading">Submission Info</h4>
                <hr />
                <dl class="mb-0">
                    <dt>Date and Time of Incident</dt>
                    <dd>
                        Gives a date and time to the incident. 
                        Please provide as accurate of a date and time as you can.
                    </dd>
                    <dt>Description</dt>
                    <dd>
                        The incident description should contain an objective and clear recounting
                        of the actions unbecoming of a member.
                        Making this information as accurate as possible will improve
                        the search feature on the main <em>Incident Reports</em> list.
                    </dd>
                    <dt>Share Identity</dt>
                    <dd>
                        Specifies whether you would like the people listed below to be able to see your identity on the report.
                        You are strongly encouraged to speak with the President and/or Sergeant at Arms after submitting a report.
                        The incident description is only viewable by the following:
                        <ol class="mb-0">
                            <li>President</li>
                            <li>Sergeant at Arms</li>
                            <li>Administrators</li>
                        </ol>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>