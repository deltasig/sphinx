@if (ViewBag.Title != "Delta Sigma Phi")
{
    var hideSuccess = string.IsNullOrEmpty(ViewBag.SuccessMessage) ? "d-none" : "";
    var hideFailure = string.IsNullOrEmpty(ViewBag.FailMessage) ? "d-none" : "";
    
    <div class="container my-2">
        <div class="row align-items-end">
            <div class="col">
                <h1>
                    <img style="display:none" height="35" width="35" class="print-inline"
                         src="https://deltasig-de.org/Images/MobileTouch-57x57.png" />
                    @ViewBag.Title
                </h1>
            </div>
            <div class="col text-end">
                <h3>@ViewBag.Subtitle</h3>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="alert alert-success alert-dismissible @hideSuccess" role="alert" id="success-message">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    @ViewBag.SuccessMessage
                </div>
                <div class="alert alert-danger alert-dismissible @hideFailure" role="alert" id="failure-message">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    @ViewBag.FailMessage
                </div>
            </div>
        </div>
    </div>
}
