            <a class="nav-link @(ViewBag.Title.Contains("Sphinx") ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="Sphinx"
               data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Sphinx">
                <i class="fa fa-home"></i> <span class="d-none d-xs-block">Sphinx</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.Title.Contains("Account") ? "active" : "")"
               asp-area="Members" asp-controller="Account" asp-action="Index"
               data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Account">
                <i class="fa fa-user"></i> <span class="d-none d-xs-block">Account</span>
