<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @RenderSection("AdditionalMeta", false)
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/Favicon-16x16.png" />

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/Site.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />

        @RenderSection("styles", required: false)

        <script src="~/lib/jquery/jquery.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/Site.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

        @RenderSection("styles", required: false)

        <script src="~/lib/jquery/jquery.js"></script>
    </environment>
</head>
<body>
    <div id="wrapper">
        @Html.Partial("_NavInternal")
        @Html.Partial("_TitleInternal")
        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">

        $(function() {
            // Activate all alerts and set them to auto-close after 10 seconds.
            setTimeout(function() {
                $("#success-message").alert('close');
                $("#fail-message").alert('close'); // Temporary (being phased out)
                $("#failure-message").alert('close');
                $("#message").alert('close'); // Temporary (being phased out)
            }, 10000);

            // Activate all tooltips and popovers.
            $("[data-toggle=\"tooltip\"]").tooltip();
            $(".clipboard").tooltip("disable");
            $("[data-toggle=\"popover\"]").tooltip();
        });

    </script>
</body>
</html>
