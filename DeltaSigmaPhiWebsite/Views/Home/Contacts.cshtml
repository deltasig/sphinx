@model IEnumerable<Leader>
@{
    ViewBag.Title = "Contacts";
}

@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-warning">
                <p>
                    A comprehensive list of contact information is forthcoming.  We apologize for the inconvenience. <br/>
                    If you have questions, please direct them to Chapter President <strong>Mac Prather</strong> via email:
                    <a href="mailto:mmpxw3@mst.edu" target="_blank">mmpxw3@mst.edu</a>
                </p>
            </div>
            @if (Model.Any())
            {
                <h3>
                    @(Model.First().Semester.DateStart.Month < 6 ? "Spring" : "Fall")
                    @Model.First().Semester.DateStart.Year
                    <small>Semester</small>

                </h3>

                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr>
                            <th>Position</th>
                            <th>Contact Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var leader in Model)
                        {
                            <tr>
                                <td>@leader.Position.PositionName</td>
                                <td>@leader.Member.FirstName @leader.Member.LastName</td>
                                <td><a href="mailto:@leader.Member.Email">@leader.Member.Email</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>
                    
                    @*Contact information will be updated soon.  We apologize for the inconvenience.*@
                </p>
            }
        </div>
    </div>
</div>