@model IncidentReport
@{
    ViewBag.Title = "Details";
}
@section Title
{
    @Html.Partial("_Title")
}


<div class="container">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Back to List", "Index")
                    @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                    {
                        @:| @Html.ActionLink("Edit", "Edit", new { id = Model.IncidentId })
                    }
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.DateTimeSubmitted)</dt>
                        <dd>@Html.DisplayFor(model => model.DateTimeSubmitted)</dd>
                        <dt>@Html.DisplayNameFor(model => model.DateTimeOfIncident)</dt>
                        <dd>@Html.DisplayFor(model => model.DateTimeOfIncident)</dd>
                        <dt>@Html.DisplayNameFor(model => model.PolicyBroken)</dt>
                        <dd>@Html.DisplayFor(model => model.PolicyBroken)</dd>
                        @if (User.IsInRole("Administrator") || User.IsInRole("President") || User.IsInRole("Sergeant-at-Arms"))
                        {
                            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                            <dd>@Html.DisplayFor(model => model.Description)</dd>
                        }
                        <dt>@Html.DisplayNameFor(model => model.OfficialReport)</dt>
                        <dd>@Html.DisplayFor(model => model.OfficialReport)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
