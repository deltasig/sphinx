@model IncidentReport
@{
    ViewBag.Title = "Edit";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IncidentId)
                @Html.HiddenFor(model => model.DateTimeOfIncident)
                @Html.HiddenFor(model => model.DateTimeSubmitted)
                @Html.HiddenFor(model => model.PolicyBroken)
                @Html.HiddenFor(model => model.Description)
                @Html.HiddenFor(model => model.ReportedBy)

                <div class="form-group">
                    @Html.LabelFor(model => model.OfficialReport, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.OfficialReport, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OfficialReport, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>