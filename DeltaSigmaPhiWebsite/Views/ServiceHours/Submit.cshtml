@model ServiceHourSubmissionModel

<div class="modal fade" id="serviceHourModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Service Hour Submission Form</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Submit", "ServiceHours", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                       
                    <div class="form-group">
                        <div class="alert alert-warning">
                            <strong>Tip: </strong>Submitting hours for an event you already turn in hours for will update the hours for that event. <br/>
                            If you enter a value of zero for an event you already submitted hours for, you will delete that submission.
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.SelectedEventId)
                        @Html.DropDownListFor(m => m.SelectedEventId, Model.Events, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.HoursServed)
                        @Html.TextBoxFor(m => m.HoursServed, new { @class = "form-control" })
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>