@model IncidentReportModel
@{
    ViewBag.Title = "Incident Reporting";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <table class ="table table-responsive table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Submission Date & Time</th>
                        <th>Incident Date & Time</th>
                        <th>Policy Broken</th>
                    </tr>
                </thead>
                @foreach (var report in Model.RecentIncidentReports)
                {
                    <tr>
                        <td>@report.DateTimeSubmitted</td>
                        <td>@report.DateTimeOfIncident</td>
                        <td>@report.PolicyBroken</td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-10">Incident Reporting Form</div>
                    </div>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("FileIncidentReport", "Sphinx", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.LabelFor(m => m.IncidentDate)
                            @Html.EditorFor(m => m.IncidentDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.IncidentDate, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.MemberBeingReported)
                            @Html.DropDownListFor(m => m.MemberBeingReported, Model.Members, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.BehaviorsWitnessed)
                            @Html.TextAreaFor(m => m.BehaviorsWitnessed, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BehaviorsWitnessed, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.PolicyBroken)
                            @Html.TextBoxFor(m => m.PolicyBroken, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PolicyBroken, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-success btn-sm">Submit</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
