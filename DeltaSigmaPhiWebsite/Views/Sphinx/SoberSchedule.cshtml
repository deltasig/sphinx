@model IEnumerable<SoberSignup>
@{
    ViewBag.Title = "Sober Schedule";
}

@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                {
                    <div class="panel-heading">
                        @Html.ActionLink("Manage", "SoberScheduleManager", "Sphinx")
                    </div>
                }
                <div class="panel-body">
                    <table class="table table-responsive table-condensed">
                        <thead>
                            <tr>
                                <th>Requested</th>
                                <th>Volunteer</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.OrderBy(s => s.DateOfShift))
                        {
                            <tr>
                                <td>@item.Type</td>
                                @if (item.UserId == null)
                                {
                                    <td>None</td>
                                }
                                else
                                {
                                    <td>@item.Member.ToString()</td>
                                }
                                <td>@item.DateOfShift.ToShortDateString()</td>
                                <td>
                                    @if (item.UserId == null)
                                    {
                                        @Html.ActionLink("Sign up", "SoberSignup", new { id = item.SignupId })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Cancel", "SoberSignupCancel", new { id = item.SignupId })
                                    }
                                    @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                    {
                                        @:|
                                        @Html.ActionLink("Delete", "SoberSignupDelete", new { id = item.SignupId })
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>