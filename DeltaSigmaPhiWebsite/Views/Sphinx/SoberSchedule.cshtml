@model IEnumerable<SoberSignup>
@{
    ViewBag.Title = "Sober Schedule";
}

@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-warning">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                {
                    <div class="panel-heading">
                        @if (Model.Any())
                        {
                            @: Sign up for sober duty below.
                        }
                        else
                        {
                            @: No shifts have been added yet.
                        }
                        @Html.ActionLink("Manage", "SoberScheduleManager", "Sphinx", new { @class = "pull-right" })
                    </div>
                }
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed" id="schedule-table">
                            <thead>
                                <tr>
                                    <th>Requested</th>
                                    <th>Date</th>
                                    <th>Volunteer</th>
                                    @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                    {
                                        <th></th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderBy(s => s.DateOfShift))
                                {
                                    <tr>
                                        <td>@item.Type</td>
                                        <td>@item.DateOfShift.ToShortDateString()</td>
                                        <td>
                                            @if (item.UserId == null)
                                            {
                                                if (!User.IsInRole("Pledge") || item.Type != SoberSignupType.Officer)
                                                {
                                                    @Html.ActionLink("Sign up", "SoberSignup", new { id = item.SignupId })
                                                }
                                            }
                                            else if (item.Member.UserName == User.Identity.Name || User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                            {
                                                using (Html.BeginForm("SoberSignupCancel", "Sphinx", new { id = item.SignupId },
                                                    FormMethod.Get, new { style = "display: inline" }))
                                                {
                                                    @item.Member.ToString()
                                                    <button type="submit" class="btn btn-sm btn-link" style="padding:0; color:red; display:inline">
                                                        <i class="fa fa-minus-square"></i>
                                                    </button>
                                                }
                                            }
                                            else
                                            {
                                                @item.Member.ToString()
                                            }
                                        </td>
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                        {
                                            <td>
                                                <a class="" href="@Url.Action("EditSoberSignup", "Sphinx", new { id = item.SignupId })">
                                                    <i class="fa fa-pencil fa-lg"></i>
                                                </a> 
                                                <a class="" href="@Url.Action("SoberSignupDelete", "Sphinx", new { id = item.SignupId })">
                                                    <i class="fa fa-times fa-lg"></i>
                                                </a>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $('#schedule-table').DataTable({
            pageLength: 25,
            lengthChange: false,
            "oLanguage": { "sSearch": "" },
            "order": [[1, "asc"], [0, "asc"]]
        });

        $('div.dataTables_filter input').addClass('form-control');
        $('div.dataTables_filter input').attr('placeholder', 'Search');
    </script>
}
