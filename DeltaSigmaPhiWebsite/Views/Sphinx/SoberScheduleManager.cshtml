@model SoberSignupModel

@{
    ViewBag.Title = "Sober Schedule Manager";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h4>Volunteers are still needed on the following dates:</h4>
            <table class="table table-striped" style="text-align:left">
                <thead>
                    <tr>
                        <th>
                            Role
                        </th>
                        <th>
                            Date
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model.SoberSignUpsNeededList)
                {
                    <tr>
                        <td>
                            @item.SoberType
                        </td>
                        <td>
                            @item.Shift.ToShortDateString()
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-lg-6">
            @using (Html.BeginForm("RequestSoberDriver", "Sphinx", FormMethod.Post, new { role = "form" }))
            {
                <h3>Request a Sober Driver</h3>
                <div class="form-group">
                    @Html.LabelFor(model => model.SoberDriverReservationRequest)
                    @Html.EditorFor(model => model.SoberDriverReservationRequest, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoberDriverReservationRequest, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-success btn-sm">Submit</button>
            }
            @using (Html.BeginForm("RequestSoberOfficer", "Sphinx", FormMethod.Post, new { role = "form" }))
            {
                <h3>Request a Sober Officer</h3>
                <div class="form-group">
                    @Html.LabelFor(model => model.SoberOfficerReservationRequest)
                    @Html.EditorFor(model => model.SoberOfficerReservationRequest, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoberOfficerReservationRequest, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-success btn-sm">Submit</button>
            }
        </div>
    </div>

</div>

@section Scripts {

}