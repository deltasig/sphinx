@model StudyHourSubmissionModel

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-10">
                Study Hour Submission Form
            </div>
            <div class="col-md-2 text-right">
                <button type="button" class="btn btn-default btn-xs text-right" id="study-close-button">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("SubmitStudy", "Sphinx", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(m => m.HoursStudied)
                @Html.TextBoxFor(m => m.HoursStudied, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.HoursStudied, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DateTimeStudied)
                @Html.EditorFor(m => m.DateTimeStudied, new { @class = "form-control !important" })
                @Html.ValidationMessageFor(m => m.DateTimeStudied, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedApproverId)
                @Html.DropDownListFor(m => m.SelectedApproverId, Model.Approvers, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-success btn-lg btn-block">Submit</button>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/jquery-2.1.0.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.4.min.js")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $("#DateTimeStudied").clearAttributes();
        
    </script>
}