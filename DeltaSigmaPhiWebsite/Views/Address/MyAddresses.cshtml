@model IEnumerable<Address>

@{Html.RenderAction("Create", "Address");}
@{Html.RenderAction("Edit", "Address");}
@{Html.RenderAction("Details", "Address");}
@{Html.RenderAction("Delete", "Address");}
<div class="panel panel-default">
    <div class="panel-heading">
        My Addresses
        <button class="btn-link pull-right" data-toggle="modal" data-target="#addressCreateModal">Create</button>
    </div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressName)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.AddressId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AddressId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AddressId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
