@model IEnumerable<PhoneNumber>

@{
    ViewBag.Title = "Phone Number Index";

    var mobile = Model.Where(m => m.Type == "Mobile");
    var emergency = Model.Where(m => m.Type == "Emergency");
}

@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li class="active"><a href="#mobile" data-toggle="pill">Mobile</a></li>
                <li><a href="#emergency" data-toggle="pill">Emergency</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="mobile">
                    <br />
                    <div class="table-responsive">
                        <table class="table table-condensed" id="mobile-phone-table">
                            <thead>
                                <tr>
                                    <th>Member</th>
                                    <th>Status</th>
                                    <th>Phone Number</th>
                                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                                    <th></th>
                                </tr>
                            </thead>

                            @foreach (var item in mobile)
                            {
                                <tr>
                                    <td>@item.Member.LastName, @item.Member.FirstName</td>
                                    <td>@item.Member.MemberStatus.StatusName</td>
                                    <td class="@(string.IsNullOrEmpty(item.Number) ? "warning" : "")">
                                        @if (string.IsNullOrEmpty(item.Number))
                                        {
                                            @:None entered.
                                        }
                                        else
                                        {
                                            <a href="tel:@item.Number">
                                                @item.Number
                                            </a>
                                        }
                                    </td>
                                    <td>@item.Type</td>
                                    <td>
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Secretary") || item.UserId == WebSecurity.CurrentUserId)
                                        {
                                            @Html.ActionLink("Edit", "Edit", "PhoneNumbers", new { id = item.PhoneNumberId }, null)
                                        }
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="tab-pane" id="emergency">
                    <br />
                    <div class="table-responsive">
                        <table class="table table-condensed" id="emergency-phone-table">
                            <thead>
                                <tr>
                                    <th>Member</th>
                                    <th>Status</th>
                                    <th>Phone Number</th>
                                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                                    <th></th>
                                </tr>
                            </thead>

                            @foreach (var item in emergency)
                            {
                                <tr>
                                    <td>@item.Member.LastName, @item.Member.FirstName</td>
                                    <td>@item.Member.MemberStatus.StatusName</td>
                                    <td class="@(string.IsNullOrEmpty(item.Number) ? "warning" : "")">
                                        @if (string.IsNullOrEmpty(item.Number))
                                        {
                                            @:None entered.
                                        }
                                        else
                                        {
                                            <a href="tel:@item.Number">
                                                @item.Number
                                            </a>
                                        }
                                    </td>
                                    <td>@item.Type</td>
                                    <td>
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Secretary") || item.UserId == WebSecurity.CurrentUserId)
                                        {
                                            @Html.ActionLink("Edit", "Edit", "PhoneNumbers", new { id = item.PhoneNumberId }, null)
                                        }
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">

        $('#mobile-phone-table').DataTable({
            pageLength: 100,
            lengthChange: false,
            "oLanguage": { "sSearch": "" }
        });
        $('#emergency-phone-table').DataTable({
            pageLength: 100,
            lengthChange: false,
            "oLanguage": { "sSearch": "" }
        });

        $('div.dataTables_filter input').addClass('form-control');
        $('div.dataTables_filter input').attr('placeholder', 'Search');
    </script>
}