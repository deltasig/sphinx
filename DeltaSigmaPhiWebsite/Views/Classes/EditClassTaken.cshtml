@model ClassTaken

@{
    ViewBag.Title = "Edit Class Enrollment Info";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.ClassId)
                @Html.HiddenFor(model => model.SemesterId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Instructor, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Instructor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Instructor, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.MidtermGrade, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.MidtermGrade, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MidtermGrade, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.FinalGrade, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FinalGrade, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FinalGrade, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Dropped, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Dropped, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dropped, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" /> |
                    @Html.ActionLink("Back to Index", "Index")
                </div>
            }
        </div>
    </div>
</div>