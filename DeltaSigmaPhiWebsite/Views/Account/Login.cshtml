@model LoginModel

@{
    ViewBag.Title = "Please Log In";
}
<div class="container">

    <div class="form-signin">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form", id = "login-form" }))
        {
            @Html.AntiForgeryToken()

            <h3>@ViewBag.Title</h3>
            <hr />

            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name", autofocus = "" })
            </div>

            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </label>
            </div>
            <button type="submit" class="btn btn-lg btn-default btn-block">Log In</button>
            <p class="text-warning">
                @Html.ValidationSummary(true, "Authentication Failed", new { @class = "text-danger" })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                <br/>
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </p>
        }
        @Html.Action("ExternalLoginsList")

    </div>
</div>