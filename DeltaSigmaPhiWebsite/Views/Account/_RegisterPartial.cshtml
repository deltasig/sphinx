@model RegisterModel

<div class="panel panel-default">
    <div class="panel-heading">Register</div>
    <div class="panel-body">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "register-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false)
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "S&T Email" })
                </div>
                <div class="col-sm-4">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.Email)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                </div>
                <div class="col-sm-4">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                </div>
                <div class="col-sm-4">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.LastName)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.StatusId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.StatusId, Model.StatusList)
                </div>
                <div class="col-sm-4">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.StatusId)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nickname, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control", placeholder = "Nickname (optional)" })
                </div>
                <div class="col-sm-4">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.Nickname)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                </div>
                <div class="col-sm-4">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.Password)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Retype Password" })
                </div>
                <div class="col-sm-4">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/Scripts/jquery-2.1.0.min.js")
            @Scripts.Render("~/Scripts/jquery-ui-1.10.4.min.js")
            @Scripts.Render("~/bundles/jqueryval")

            <script type="text/javascript">
                $(function () {
                    $("#register-form").hide();
                    $("#register-form").fadeIn(700);
                });
            </script>
        }
    </div>
</div>

