@model DeltaSigmaPhiWebsite.Models.LocalPasswordModel

<div class="panel panel-default">
    <div class="panel-heading">Change Password</div>
    <div class="panel-body">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
                <div class="col-sm-7">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.OldPassword)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
                <div class="col-sm-7">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
                <div class="col-sm-7">
                    <p class="text-warning">
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Change Password</button>
                </div>
            </div>
        }
    </div>
</div>