@model AppointModel

<div class="panel panel-default">
    <div class="panel-heading">Appoint</div>
    <div class="panel-body">
        @using (Html.BeginForm("Appoint", "Account", FormMethod.Post, new { @class = "", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedUserId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.SelectedUserId, Model.Users, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SelectedUserId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedPositionName, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.SelectedPositionName, Model.Positions, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SelectedPositionName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedSemesterId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.SelectedSemesterId, Model.AvailableSemesters, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SelectedSemesterId, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        }
    </div>
</div>
