@model DeleteRoleModel

<div class="panel panel-default">
    <div class="panel-heading">Delete Role</div>
    <div class="panel-body">
        @using (Html.BeginForm("DeleteRole", "Account", FormMethod.Post, new { @class = "form-inline", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.DropDownListFor(m => m.SelectedRoleName, Model.Roles, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        }
    </div>
</div>