@model DeltaSigmaPhiWebsite.Models.CreateRoleModel
    
<div class="panel panel-default">
    <div class="panel-heading">Create Role</div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.RoleName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.RoleName)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </div>
        }

        @section Scripts { @Scripts.Render("~/bundles/jqueryval") }
    </div>
</div>