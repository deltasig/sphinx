@model CreateRoleModel
    
<div class="panel panel-default">
    <div class="panel-heading">Create Role</div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateRole", "Account", FormMethod.Post, new { @class = "form-inline", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", placeholder = "Role Name" })
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        }
    </div>
</div>