@model UnregisterModel

<div class="panel panel-default">
    <div class="panel-heading">Unregister</div>
    <div class="panel-body">
        <div class="alert alert-warning">
            <strong>Warning!</strong>  This will remove all records of a member's existence in this system.
        </div>
        @using (Html.BeginForm("Unregister", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedUserId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.SelectedUserId, Model.Users)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Unregister</button>
                </div>
            </div>
        }

    </div>
</div>