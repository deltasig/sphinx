@model AssignUserToRoleModel

<div class="panel panel-default">
    <div class="panel-heading">Assign User To Role</div>
    <div class="panel-body">
        @using (Html.BeginForm("AssignUserToRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedUserId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.SelectedUserId, Model.Users)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedRoleName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.SelectedRoleName, Model.Roles)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Assign</button>
                </div>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>
