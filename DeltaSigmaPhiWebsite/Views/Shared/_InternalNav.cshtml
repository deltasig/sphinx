<div class="navbar navbar-default navbar-fixed-top" style="margin-bottom: 0">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home")">
                <img src="~/Images/MobileTouch-57x57.png" width="40" height="40" alt="Edit" style="margin-right: 15px" />
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav" id="menu">
                @if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("Administrator"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Admin Panel", "AdminPanel", "Sphinx")</li>
                                <li>@Html.ActionLink("Registration", "Registration", "Account")</li>
                                <li>@Html.ActionLink("Role Manager", "RoleManager", "Account")</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        if (User.IsInRole("Secretary"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Secretary<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Registration", "Registration", "Account")</li>
                                </ul>
                            </li>
                        }
                    }
                    <li>@Html.ActionLink("Sober Schedule", "SoberSchedule", "Sphinx")</li>
                    <li>@Html.ActionLink("Laundry Schedule", "LaundrySchedule", "Sphinx")</li>
                    <li>@Html.ActionLink("Incident Reporting", "IncidentReporting", "Sphinx")</li>
                }
                else
                {
                    <li>
                        <p class="navbar-text"></p>
                    </li>
                }
            </ul>
            <div id="login">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
</div>