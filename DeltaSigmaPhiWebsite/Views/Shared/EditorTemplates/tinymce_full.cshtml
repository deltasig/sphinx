<script src="@Url.Content("~/Scripts/tinymce/tinymce.js")" type="text/javascript"></script>

<script type="text/javascript">

    (function () {

        tinymce.init({
            selector: "textarea",
            elements: "@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)",
            height: "300",
            width: "100%",
            plugins: ["anchor link autoresize"],
            statusbar: true,
            resize: "both",
            menubar: false,
            verify_html: false,
            toolbar: "undo redo | link anchor | fontsizeselect styleselect",
            rel_list: [{ title: 'Lightbox', value: 'lightbox' }]
        });

    })();

</script>

@Html.TextArea(string.Empty, /* Name suffix */
    ViewData.TemplateInfo.FormattedModelValue /* Initial value */
)