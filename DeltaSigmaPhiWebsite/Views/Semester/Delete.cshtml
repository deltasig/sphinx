@model DeltaSigmaPhiWebsite.Models.Semester

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <div class="row">
            <div class="col-md-12">
                <h1>Delete</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>Are you sure you want to delete this?</h3>

            <blockquote>
                <h4>@(Model.DateStart.Month < 6 ? "Spring" : "Fall") @Model.DateStart.Year Semester</h4>
                <h5>
                    @Html.DisplayFor(model => model.DateStart) to
                    @Html.DisplayFor(model => model.DateEnd)
                </h5>
            </blockquote>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            }
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>
