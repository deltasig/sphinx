@model CreateSemesterModel

@{
    ViewBag.Title = "Create New Semester";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="modal fade" id="semesterCreateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Create Semester Form</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Semester.DateStart, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Semester.DateStart, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Semester.DateStart, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Semester.DateEnd, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Semester.DateEnd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Semester.DateEnd, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.PledgeClassName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.PledgeClassName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PledgeClassName, "", new { @class = "text-danger" })
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
