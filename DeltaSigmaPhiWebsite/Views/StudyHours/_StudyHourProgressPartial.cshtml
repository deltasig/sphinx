@model IEnumerable<StudyHour>
           
<table class="table table-responsive table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Required Hours</th>
            <th>Turned In</th>
            <th>Approved</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select(m => m.SubmittedBy).Distinct())
        {
            <tr>
                <td>@Model.Select(m => m.Submitter).First(m => m.UserId == item).ToString()</td>
                <td>@Model.Select(m => m.Submitter).First(m => m.UserId == item).RequiredStudyHours</td>
                <td>@Model.Where(m => m.SubmittedBy == item).Sum(s => s.DurationHours)</td>
                <td>@Model.Where(m => m.SubmittedBy == item && m.ApproverId != null).Sum(s => s.DurationHours)</td>
                <td>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                    {
                        @Html.ActionLink("Edit", "Edit", "Account", new { id = Model.Select(m => m.Submitter).First(m => m.UserId == item).UserName }, new { })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
