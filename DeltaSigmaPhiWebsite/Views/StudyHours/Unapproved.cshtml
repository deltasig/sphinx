@model IEnumerable<StudyHour>

@{
    ViewBag.Title = "Unapproved Study Hours";
}

@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-responsive table-condensed">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>@Html.DisplayNameFor(model => model.DurationHours)</th>
                                <th>@Html.DisplayNameFor(model => model.DateTimeSubmitted)</th>
                                <th>@Html.DisplayNameFor(model => model.IsProctored)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Submitter.ToString()</td>
                                    <td>@Html.DisplayFor(modelItem => item.DurationHours)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DateTimeSubmitted)</td>
                                    <td>@Html.DisplayFor(modelItem => item.IsProctored)</td>
                                    <td>
                                        @Html.ActionLink("Approve", "Approve", new { id = item.StudyHourId })
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                        {
                                            @:|
                                            @Html.ActionLink("Delete", "Delete", new { id = item.StudyHourId })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>