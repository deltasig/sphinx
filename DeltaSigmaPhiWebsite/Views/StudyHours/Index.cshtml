@model IEnumerable<StudyHour>

@{
    ViewBag.Title = "Study Hour Index";
}

@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed" id="hours-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>@Html.DisplayNameFor(model => model.DateTimeStudied)</th>
                                    <th>@Html.DisplayNameFor(model => model.DurationHours)</th>
                                    <th>@Html.DisplayNameFor(model => model.IsProctored)</th>
                                    <th>@Html.DisplayNameFor(model => model.DateTimeSubmitted)</th>
                                    <th>Approver</th>
                                    <th>@Html.DisplayNameFor(model => model.DateTimeApproved)</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Submitter.FirstName @item.Submitter.LastName[0].</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateTimeStudied)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DurationHours)</td>
                                        <td>@Html.DisplayFor(modelItem => item.IsProctored)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateTimeSubmitted)</td>
                                        <td>
                                            @if (item.Approver == null)
                                            {
                                                @: None
                                            }
                                            else
                                            {
                                                @item.Approver.FirstName @:  @item.Approver.LastName[0].
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.DateTimeApproved)</td>
                                        <td>
                                            @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                            {
                                                @Html.ActionLink("Delete", "Delete", new { id = item.StudyHourId })
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        $('#hours-table').DataTable({
            pageLength: 25,
            lengthChange: false,
            "oLanguage": { "sSearch": "" }
        });

        $('div.dataTables_filter input').addClass('form-control');
        $('div.dataTables_filter input').attr('placeholder', 'Search');
    </script>
}