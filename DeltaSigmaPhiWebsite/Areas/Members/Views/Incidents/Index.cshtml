@model IEnumerable<DeltaSigmaPhiWebsite.Entities.IncidentReport>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Incident Reports";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Create New", "Create")
                </div>
                <div class="panel-body">
                    <table data-toggle="table" data-classes="table table-condensed" 
                           data-search="true" data-pagination="true" data-page-size="25" data-sort-name="submitted-on" data-sort-order="desc">
                        <thead>
                            <tr>
                                <th class="col-sm-3" data-sortable="true" data-field="submitted-on">Submitted On</th>
                                <th class="col-sm-3" data-sortable="true" data-field="occurred-on">Occurred On</th>
                                <th data-sortable="true" data-field="policy">Policy Broken</th>
                                <th class="col-sm-2" data-sortable="true" data-field="start"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DateTimeSubmitted.ToString("MM/dd/yyyy hh:mm tt")</td>
                                    <td>@item.DateTimeOfIncident.ToString("MM/dd/yyyy hh:mm tt")</td>
                                    <td>@item.PolicyBroken</td>
                                    <td class="text-right">
                                        @Html.ActionLink("Details", "Details", new { id = item.IncidentId })
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms") || User.IsInRole("President"))
                                        {
                                            @: | 
                                            @Html.ActionLink("Edit", "Edit", new { id = item.IncidentId })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        


    </script>
}