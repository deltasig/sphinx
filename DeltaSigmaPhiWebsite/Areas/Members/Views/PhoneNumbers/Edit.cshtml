@model DeltaSigmaPhiWebsite.Entities.PhoneNumber
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Phone Number";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-inline">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PhoneNumberId)
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.Type)

                    <p>
                        Modifying "@Model.Type" Phone Number for @Model.Member.FirstName @Model.Member.LastName
                    </p>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "sr-only" })
                        @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control", placeholder = "###-###-####" } })
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <br />
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            }

        </div>
    </div>
</div>