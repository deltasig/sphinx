@model DeltaSigmaPhiWebsite.Areas.Study.Models.StudyHourSubmissionModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Study Hour Submission";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            @using (Html.BeginForm("Submit", "Hours", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.Label("Assignment for which you are submitting hours")
                    @Html.DropDownListFor(s => s.Submission.AssignmentId, Model.MemberAssignments, new { @class = "form-control" })
                </div>
                
                <div class="form-group">
                    @Html.Label("Approver")
                    @Html.DropDownListFor(s => s.Submission.ApproverId, Model.Approvers, new { @class = "form-control" })
                </div>
                
                <div class="form-group">
                    @Html.Label("Date & Time You Studied")
                    @Html.EditorFor(m => m.Submission.DateTimeStudied, new { htmlAttributes = new { @class = "form-control", type = "datetime-local", @Value = Model.Submission.DateTimeStudied.ToString("yyyy-MM-ddTHH:mm:ss") } })
                    @Html.ValidationMessageFor(m => m.Submission.DateTimeStudied, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.Label("Duration (Hours)")
                    @Html.TextBoxFor(m => m.Submission.DurationHours, new { @class = "form-control", autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Submission.DurationHours, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    @Html.EditorFor(m => m.Submission.IsProctored)
                    @Html.Label("Proctored")
                </div>
                
                <div class="form-group">
                    @Html.Label("Study Location")
                    @Html.TextBoxFor(m => m.Submission.StudyLocation, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Submission.StudyLocation, "", new { @class = "text-danger" })
                </div>

                <input type="submit" value="Create" class="btn btn-default" /> @:|
                @Html.ActionLink("Back to Sphinx", "Index", "Home", new { area = "Sphinx" }, null)
            }
        </div>
        <div class="col-sm-6 col-xs-12">
            <h3>Tips</h3>
            <div class="panel panel-warning">
                <div class="panel-heading">Submitting Hours</div>
                <div class="panel-body">
                    If you are submitting proctored study hours, make sure you check the box. <br /><br />
                    Also, keep in mind that proctored hours must be approved by someone designated as a proctor.
                    Proctors will appear in the Approver drop-down list with '(Proctor)' next to their name. <br /><br />
                    If the person you want to approve your study hours doesn't appear in the drop-down, that's because they (1)
                    have not entered their grades for last semester into the system and/or (2) did not make above a 2.5 gpa.
                </div>
            </div>
        </div>
    </div>
</div>

