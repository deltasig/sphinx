@model IEnumerable<DeltaSigmaPhiWebsite.Entities.StudyHour>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Unapproved Study Hours";
    var cstZone = TimeZoneInfo.FindSystemTimeZoneById("Central Standard Time");
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-classes="table table-condensed" 
                           data-search="true" data-pagination="true" data-page-size="50" data-sort-name="submitted-on" data-sort-order="desc">
                        <thead>
                            <tr>
                                <th data-sortable="true" data-field="name">Name</th>
                                <th data-sortable="true" class="col-sm-2" data-field="studied-on">Studied On</th>
                                <th data-sortable="true" class="col-sm-2" data-field="duration">
                                    Duration <i data-toggle="tooltip" data-placement="top" title="Displayed in Hours" class="fa fa-info-circle text-info"></i>
                                </th>
                                <th data-sortable="true" class="col-sm-2" data-field="submitted-on">Submitted On</th>
                                <th data-sortable="true" class="col-sm-1" data-field="is-proctored">Proctored</th>
                                <th class="col-sm-2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(d => d.DateTimeSubmitted).ThenBy(s => s.Assignment.AssignedMember.ToString()))
                            {
                                <tr>
                                    <td>@item.Assignment.AssignedMember.ToString()</td>
                                    <td>@TimeZoneInfo.ConvertTimeFromUtc(item.DateTimeStudied, cstZone).ToString("MM/dd/yyyy")</td>
                                    <td>@item.DurationHours</td>
                                    <td>@TimeZoneInfo.ConvertTimeFromUtc(item.DateTimeSubmitted, cstZone).ToString("MM/dd/yyyy hh:mm tt")</td>
                                    <td>@Html.DisplayFor(modelItem => item.IsProctored)</td>
                                    <td class="text-right">
                                        @if (User.Identity.Name != item.Assignment.AssignedMember.UserName)
                                        {
                                            using (Html.BeginForm("Approve", "StudyHours", new { id = item.StudyHourId }, FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="submit" value="Approve" class="btn btn-link" style="padding: 0" />
                                                if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                                {
                                                    @:|
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.StudyHourId })
                                                }
                                            }
                                        }
                                        else if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                        {
                                            @Html.ActionLink("Delete", "Delete", new { id = item.StudyHourId })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">

        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        })

    </script>
}