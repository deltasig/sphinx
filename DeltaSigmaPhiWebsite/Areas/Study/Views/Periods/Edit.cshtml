@model DeltaSigmaPhiWebsite.Entities.StudyPeriod
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Study Hour Assignment";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            @Html.ActionLink("Back to Study Periods", "Index")
            @Html.ActionLink("Go to Info", "Info", new { id = Model.PeriodId }, new { @class = "pull-right" })
            <br /><br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.PeriodId)

                <div class="form-group">
                    @Html.Label("Start Date/Time", new { @class = "control-label" })
                    <div class='input-group date' id='datetimepicker1'>
                        @Html.EditorFor(m => m.Start, new { htmlAttributes = new { @class = "form-control", type = "datetime" }})
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.Start, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.Label("End Date/Time", new { @class = "control-label" })
                    <div class='input-group date' id='datetimepicker2'>
                        @Html.EditorFor(m => m.End, new { htmlAttributes = new { @class = "form-control", type = "datetime" }})
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.End, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>
@section scripts
{
    <script>
        $(function () {
            $('#datetimepicker1').datetimepicker();
            $('#datetimepicker2').datetimepicker();
        });
    </script>
}