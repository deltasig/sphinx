@model DeltaSigmaPhiWebsite.Areas.Study.Models.StudyPeriodIndexModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Study Periods";
    var cstZone = TimeZoneInfo.FindSystemTimeZoneById("Central Standard Time");
    var now = @TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, cstZone);
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-6">
            @using (Html.BeginForm("Index", "Periods", new { area = "Study" }, FormMethod.Get, new { @class = "form-inline", role = "form" }))
            {
                <div class="form-group">
                    @Html.DropDownListFor(s => s.SelectedSemester, Model.SemesterList, new { @class = "form-control" })

                    <input type="submit" value="Filter" class="btn btn-default" />
                    <br /><br />
                </div>
            }
        </div>
        <div class="col-xs-6 text-right">
            @if(User.IsInRole("Administrator") || User.IsInRole("Academics"))
            {
                @Html.ActionLink("New Period", "Create", "Periods", new { area = "Study" }, new { @class = "btn btn-sm btn-success text-right" })
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table data-toggle="table" data-classes="table table-condensed" 
                           data-pagination="true" data-page-size="25" data-sort-name="end" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th class="col-sm-4" data-sortable="true" data-field="start">Start Date/Time</th>
                                <th class="col-sm-4" data-sortable="true" data-field="end">End Date/Time</th>
                                <th class="col-sm-2" data-sortable="true" data-field="assigned">Assigned Members</th>
                                <th class="col-sm-2"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.Periods)
                            {
                                var isCurrentWeek = now >= item.Start && now <= item.End;

                                <tr class="@(isCurrentWeek ? "active" : "")">
                                    <td>@item.Start.ToString("MM/dd/yyyy hh:mm tt")</td>
                                    <td>@item.End.ToString("MM/dd/yyyy hh:mm tt")</td>
                                    <td>@item.Assignments.Count</td>
                                    <td class="text-right">
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                        {
                                            @Html.ActionLink("Assignments", "Info", "Periods", new { id = item.PeriodId, area = "Study" }, null) @:| 
                                            @Html.ActionLink("Edit", "Edit", "Periods", new { id = item.PeriodId, area = "Study" }, null)
                                            if (!item.Assignments.Any())
                                            {
                                                @:|
                                                @Html.ActionLink("Delete", "Delete", "Periods", new { id = item.PeriodId, area = "Study" }, null)
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    The highlighted row denotes the current period.
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        
    </script>
}