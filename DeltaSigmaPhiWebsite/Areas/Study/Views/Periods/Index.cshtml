@model DeltaSigmaPhiWebsite.Areas.Study.Models.StudyPeriodIndexModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Study Periods";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-6">
            @using (Html.BeginForm("Index", "Periods", new { area = "Study" }, FormMethod.Get, new { @class = "form-inline", role = "form" }))
            {
                <div class="form-group">
                    @Html.DropDownListFor(s => s.SelectedSemester, Model.SemesterList, new { @class = "form-control" })

                    <input type="submit" value="Filter" class="btn btn-default" />
                    <br /><br />
                </div>
            }
        </div>
        <div class="col-xs-6 text-right">
            @if(User.IsInRole("Administrator") || User.IsInRole("Academics"))
            {
                @Html.ActionLink("New Period", "Create", "Periods", new { area = "Study" }, new { @class = "btn btn-sm btn-success text-right" })
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-condensed" id="hours-table">
                        <thead>
                            <tr>
                                <th>Start-End Date/Time</th>
                                <th>Assigned Members</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.Periods)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.Start + " to " + item.End, "Info", "Periods", new { id = item.PeriodId, area = "Study" }, null)
                                    </td>
                                    <td>@item.Assignments.Count</td>
                                    <td>
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                        {
                                            @Html.ActionLink("Edit", "Edit", "Periods", new { id = item.PeriodId, area = "Study" }, null)
                                            if (!item.Assignments.Any())
                                            {
                                                @:|
                                                @Html.ActionLink("Delete", "Delete", "Periods", new { id = item.PeriodId, area = "Study" }, null)
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        $('#hours-table').DataTable({
            pageLength: 25,
            lengthChange: false,
            "oLanguage": { "sSearch": "" },
            "order": [0, "dsc"]
        });

        $('div.dataTables_filter input').addClass('form-control');
        $('div.dataTables_filter input').attr('placeholder', 'Search');
    </script>
}