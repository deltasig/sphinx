@model DeltaSigmaPhiWebsite.Entities.StudyHourAssignment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create New Study Hour Assignment";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                <div class="form-group">
                    @Html.Label("Start Date/Time", new { @class = "control-label" })
                    @Html.EditorFor(m => m.Start, new { htmlAttributes = new { @class = "form-control", type = "datetime-local", @Value = Model.Start.ToString("yyyy-MM-ddTHH:mm:ss") } })
                    @Html.ValidationMessageFor(model => model.Start, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.Label("End Date/Time", new { @class = "control-label" })
                    @Html.EditorFor(m => m.End, new { htmlAttributes = new { @class = "form-control", type = "datetime-local", @Value = Model.End.ToString("yyyy-MM-ddTHH:mm:ss") } })
                    @Html.ValidationMessageFor(model => model.End, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" /> |
                    @Html.ActionLink("Back to Assignments", "Index")
                </div>
            }
        </div>
    </div>
</div>
