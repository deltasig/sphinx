@model DeltaSigmaPhiWebsite.Entities.StudyAssignment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Unassign Member";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3>Are you sure you want to unassign @Model.AssignedMember.FirstName from this assignment?</h3>

            <dl class="dl-horizontal">
                <dt>Member</dt>
                <dd>@Model.AssignedMember</dd>

                <dt>Assignment</dt>
                <dd>@Model.Period.Start to @Model.Period.End</dd>

                <dt>Unproctored</dt>
                <dd>@Model.UnproctoredAmount</dd>

                <dt>Proctored</dt>
                <dd>@Model.ProctoredAmount</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <input type="submit" value="Unassign" class="btn btn-default" /> @:|
                @Html.ActionLink("Back to Assignment", "Info", "Periods", new { id = Model.PeriodId }, null)
            }
        </div>
    </div>
</div>
