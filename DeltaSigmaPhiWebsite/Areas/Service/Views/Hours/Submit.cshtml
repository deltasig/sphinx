@model DeltaSigmaPhiWebsite.Areas.Service.Models.ServiceHourSubmissionModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Service Hour Submission";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            @using (Html.BeginForm("Submit", "Hours", new { area = "Service" }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                
                <div class="form-group">
                    @Html.LabelFor(m => m.SelectedEventId)
                    @Html.DropDownListFor(m => m.SelectedEventId, Model.Events, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.HoursServed)
                    @Html.TextBoxFor(m => m.HoursServed, new { @class = "form-control", autocomplete = "off" })
                </div>
                
                <button type="submit" class="btn btn-success">Submit</button>
            }
        </div>
        <div class="col-sm-6 col-xs-12">
            <h3>Tips</h3>
            <div class="panel panel-warning">
                <div class="panel-heading">Submitting Hours</div>
                <div class="panel-body">
                    Submitting hours for an event for which you already turned in hours will update the hours for that event. <br /><br />
                    If you enter a value of zero for an event for which you already submitted hours, you will delete that submission.
                </div>
            </div>
            <div class="panel panel-warning">
                <div class="panel-heading">Events</div>
                <div class="panel-body">
                    You can't add hours for a previous semester, so make sure that you submit your service hours 
                    before the end of each semester.<br /><br />
                    If you don't see an event in the dropdown, you can add it yourself by going 
                    @Html.ActionLink("here", "Index", "Events", new { area = "Service" }, new { @class = "" }).
                </div>
            </div>
        </div>
    </div>
</div>

