@model DeltaSigmaPhiWebsite.Entities.ServiceHour
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Service Hour Submission";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="alert alert-danger">
                <p>Are you sure you want to delete this <strong>submission</strong>?</p>
            </div>
            <dl class="dl-horizontal">
                <dt>Member</dt>
                <dd>@Model.Member.FirstName @Model.Member.LastName</dd>
                <dt>Event</dt>
                <dd>@Html.DisplayFor(model => model.Event.EventName)</dd>
                <dt>Hours</dt>
                <dd>@Html.DisplayFor(model => model.DurationHours)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.EventId)
                @Html.HiddenFor(model => model.UserId)
                
                <div>
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index", new { SelectedSemester = ViewBag.Semester })
                </div>
            }
        </div>
    </div>
</div>
