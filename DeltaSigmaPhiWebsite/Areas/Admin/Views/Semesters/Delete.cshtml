@model DeltaSigmaPhiWebsite.Entities.Semester
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Semester";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Semesters
                </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>Are you sure you want to delete this?</h3>

            <blockquote>
                <h4>@Model.ToString()</h4>
                <h5>
                    @Html.DisplayFor(model => model.DateStart) to
                    @Html.DisplayFor(model => model.DateEnd)
                </h5>
            </blockquote>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>
