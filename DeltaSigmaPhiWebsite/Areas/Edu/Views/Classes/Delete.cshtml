@model DeltaSigmaPhiWebsite.Entities.Class

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Class";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="alert alert-danger">
                <p>Are you sure you want to delete this <strong>class</strong>?</p>
            </div>
            <div class="form-group">
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.Department.DepartmentName)</dt>
                    <dd>@Html.DisplayFor(model => model.Department.DepartmentName)</dd>
                    <dt>@Html.DisplayNameFor(model => model.CourseShorthand)</dt>
                    <dd>@Html.DisplayFor(model => model.CourseShorthand)</dd>
                    <dt>@Html.DisplayNameFor(model => model.CourseName)</dt>
                    <dd>@Html.DisplayFor(model => model.CourseName)</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div>
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to Index", "Index")
                </div>
            }
        </div>
    </div>
</div>