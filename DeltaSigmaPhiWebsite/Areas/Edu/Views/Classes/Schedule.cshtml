@model DeltaSigmaPhiWebsite.Areas.Edu.Models.ClassScheduleModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Class Schedule";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            @if (ViewBag != null && ViewBag.Message.Length > 0)
            {
                <div class="alert alert-warning">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <a href="@Url.Action("Index", "Roster", new { area = "Members" })" class="btn btn-sm btn-default">
                <i class="fa fa-caret-left"></i> Back to Roster
            </a>
        </div>
        <div class="col-xs-6 text-right">
            @if (User.IsInRole("Administrator") || User.IsInRole("Academics") || User.Identity.Name == Model.SelectedUserName)
            {
                <a href="@Url.Action("Transcript", "Classes", new { userName = Model.SelectedUserName, area = "Edu" })" class="btn btn-sm btn-default">
                    Go to Transcript <i class="fa fa-caret-right"></i>
                </a>
            }
        </div>
        <br />
        <br />
    </div>
    <div class="row">
        @if (User.IsInRole("Administrator") || User.IsInRole("Academics") || User.Identity.Name == Model.SelectedUserName)
        {
            <div class="col-xs-12 col-sm-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Add a New Class
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("AddClassTaken", "Classes", FormMethod.Post, new { @class = "", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => Model.ClassTaken.UserId)
                            @Html.HiddenFor(m => Model.SelectedUserName)
                
                            <div class="form-group">
                                @Html.Label("Semester", new { @class = "control-label" })
                                @Html.DropDownListFor(m => Model.ClassTaken.SemesterId, Model.Semesters, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @{
                            var list = Model.AllClasses.Select(c => new { ClassId = c.ClassId, Text = c.CourseShorthand + ": " + c.CourseName });
                                }

                                @Html.Label("Class", new { @class = "control-label" })
                                @Html.DropDownListFor(m => Model.ClassTaken.ClassId,
                                    new SelectList(list, "ClassId", "Text"),
                                    new { @class = "form-control", autocomplete = "off", id = "class-dd" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Instructor (optional)", new { @class = "control-label" })
                                @Html.EditorFor(m => Model.ClassTaken.Instructor, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                            </div>
                            
                            <div class="checkbox form-group">
                                <label class="control-label">
                                    @Html.EditorFor(model => Model.ClassTaken.IsSummerClass)
                                    Summer Class
                                </label>
                            </div>
                
                            <button type="submit" class="btn btn-default">Add</button>
                        }
                    </div>
                </div>
            </div>
        }
        <div class="col-xs-12 col-sm-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            All Classes
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @if (Model.ClassesTaken.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Semester</th>
                                        <th>Course</th>
                                        @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                        {

                                            <th></th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ClassesTaken)
                                    {
                                        <tr>
                                            <td>
                                                @(item.IsSummerClass
                                        ? "Summer " + item.Semester.DateStart.Year
                                        : item.Semester.ToString())
                                            </td>
                                            <td>@item.Class.CourseShorthand - @item.Class.CourseName</td>
                                            @if (User.IsInRole("Administrator") || User.IsInRole("Academics"))
                                            {
                                                <td>
                                                    @Html.ActionLink("Edit", "EditClassTaken", "Classes", new { id = item.UserId, sid = item.SemesterId, cid = item.ClassId }, null) | 
                                                    @Html.ActionLink("Delete", "DeleteFromSchedule", "Classes", new { id = item.UserId, sid = item.SemesterId, cid = item.ClassId }, null)
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        @: No classes added!
                    }
                </div>
                <div class="panel-footer">
                    Total Credit Hours: @Model.ClassesTaken.Sum(c => c.Class.CreditHours)
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#class-dd").select2();
        });

    </script>
}