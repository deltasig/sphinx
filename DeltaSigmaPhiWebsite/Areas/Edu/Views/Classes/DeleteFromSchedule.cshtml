@model DeltaSigmaPhiWebsite.Entities.ClassTaken

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Class Taken";
}
@section Title
{
    @Html.Partial("_Title")
}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="alert alert-danger">
                <p>Are you sure you want to delete this <strong>class</strong>?</p>
            </div>
            <dl class="dl-horizontal">
                <dt>Member</dt>
                <dd>@Model.Member.FirstName @Model.Member.LastName</dd>
                <dt>Semester</dt>
                <dd>@Model.Semester.ToString()</dd>
                <dt>Class</dt>
                <dd>@Model.Class.CourseShorthand: @Model.Class.CourseName</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.UserId)
                @Html.HiddenFor(m => m.SemesterId)
                @Html.HiddenFor(m => m.ClassId)
                @Html.HiddenFor(m => m.IsSummerClass)

                <div>
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to Classes", "Schedule", new { userName = Model.Member.UserName })
                </div>
            }
        </div>
    </div>
</div>