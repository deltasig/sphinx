@model DeltaSigmaPhiWebsite.Entities.ScholarshipSubmission
@{
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
    ViewBag.Title = "Scholarship Submission";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            @Html.ActionLink("Back to List", "Index") <br/><br/>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Model.Application.Title
                </div>
                <div class="panel-body">
                    <h4>General Information</h4>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-xs-12">
                                @Html.Label("First Name", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.FirstName)
                            </div>
                            <div class="col-sm-4 col-xs-12">
                                @Html.Label("Last Name", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.LastName)
                            </div>
                            <div class="col-sm-4 col-xs-12">
                                @Html.Label("Student #", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.StudentNumber)
                            </div>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                @Html.Label("Email", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.Email)
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                @Html.Label("Phone #", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </div>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3 col-xs-12">
                                @Html.Label("Address 1", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.Address1)
                            </div>
                            <div class="col-sm-3 col-xs-12">
                                @Html.Label("Address 2", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.Address2)
                            </div>
                            <div class="col-sm-3 col-xs-12">
                                @Html.Label("City", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.City)
                            </div>
                            <div class="col-sm-1 col-xs-12">
                                @Html.Label("State", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.State)
                            </div>
                            <div class="col-sm-2 col-xs-12">
                                @Html.Label("Country", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.Country)
                            </div>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-xs-12">
                                @Html.Label("High School", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.HighSchool)
                            </div>
                            <div class="col-sm-4 col-xs-12">
                                @Html.Label("Act or Sat Score", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.ActSatScore)
                            </div>
                            <div class="col-sm-4 col-xs-12">
                                @Html.Label("High School Gpa", htmlAttributes: new { @class = "control-label" })<br/>
                                @Html.DisplayFor(model => model.Gpa)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("How did you hear about this scholarship?", htmlAttributes: new { @class = "control-label" })
                        @Html.Label(Model.HearAboutScholarship, htmlAttributes: new { @class = "control-label" })
                    </div>

                    <h4>Short Answer Questions</h4>

                    @foreach (var a in Model.Answers)
                    {
                        <strong>@a.Question.Prompt</strong>
                        <p>
                            @a.AnswerText
                        </p>
                    }
                </div>
                <div class="panel-footer">
                    Submitted on: @Model.SubmittedOn
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        
    </script>
}