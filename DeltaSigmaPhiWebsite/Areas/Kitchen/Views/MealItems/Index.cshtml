@model IEnumerable<DeltaSigmaPhiWebsite.Entities.MealItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Meal Items";
}
@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <div class="btn-group" role="group" aria-label="...">
                @{ Html.RenderPartial("~/Areas/Kitchen/Views/Shared/_MealsNavPartial.cshtml"); }
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <p>
                @Html.ActionLink("Create New", "Create", "MealItems", new { area = "Kitchen" }, new { @class = "btn btn-sm btn-success" })
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-condensed" id="apps-table">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Votes</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MealItemType.Name</td>
                                    <td>
                                        <ul class="list-inline" style="margin: 0">
                                            <li style="padding: 0">
                                                <small>@item.Name</small>
                                            </li>
                                            <li style="padding: 0">
                                                <a href="@Url.Action("Upvote", "Meals", new { id = item.MealItemId })" data-toggle="tooltip" data-placement="top" title="Upvote">
                                                    @if (item.MealVotes.Any(v => v.MealItemId == item.MealItemId && v.IsUpvote && v.UserId == WebSecurity.CurrentUserId))
                                                    {
                                                        <i class="fa fa-lg fa-arrow-circle-up text-success"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa fa-arrow-circle-up text-muted"></i>
                                                    }
                                                </a>
                                            </li>
                                            <li style="padding: 0">
                                                <a href="@Url.Action("Downvote", "Meals", new { id = item.MealItemId })" data-toggle="tooltip" data-placement="top" title="Downvote">
                                                    @if (item.MealVotes.Any(v => v.MealItemId == item.MealItemId && !v.IsUpvote && v.UserId == WebSecurity.CurrentUserId))
                                                    {
                                                        <i class="fa fa-lg fa-arrow-circle-down text-danger"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa fa-arrow-circle-down text-muted"></i>
                                                    }
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                    <td>
                                        <i class="fa fa-arrow-circle-up text-success"></i>
                                        @item.MealVotes.Count(v => v.IsUpvote)
                                        <i class="fa fa-arrow-circle-down text-danger"></i>
                                        @item.MealVotes.Count(v => !v.IsUpvote)
                                    </td>
                                    <td>
                                        @if (User.IsInRole("Administrator") || User.IsInRole("House Steward"))
                                        {
                                            @Html.ActionLink("Edit", "Edit", new { id = item.MealItemId })
                                            if (!item.MealToItems.Any())
                                            {
                                                @: |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.MealItemId })
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        $('#apps-table').DataTable({
            pageLength: 10,
            lengthChange: false,
            "oLanguage": { "sSearch": "" },
            "order": [[0, "asc"], [1, "asc"]],
            "columnDefs": [
                { "width": "15%", "targets": 0 },
                { "width": "15%", "targets": 2 },
                { "width": "10%", "targets": 3 }
            ]
        });

        $('div.dataTables_filter input').addClass('form-control');
        $('div.dataTables_filter input').attr('placeholder', 'Search');
        
        $('[data-toggle="tooltip"]').tooltip();
    </script>
}
