@using DeltaSigmaPhiWebsite.Entities
@model IEnumerable<SoberSignup>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sober Schedule";
}

@section Title
{
    @Html.Partial("_Title")
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-warning">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                {
                    <div class="panel-heading">
                        @if (Model.Any())
                        {
                            @: Sign up for sober duty below.
                        }
                        else
                        {
                            @: No shifts have been added yet.
                        }
                        @Html.ActionLink("Manage", "Manager", "Sobers", new { area = "Sphinx" }, new { @class = "pull-right" })
                    </div>
                }
                <div class="panel-body">
                    <table data-toggle="table" data-classes="table table-condensed" 
                           data-search="true" data-pagination="true" data-page-size="25" data-sort-name="date" data-sort-order="asc">
                        <thead>
                            <tr>
                                <th class="col-sm-2" data-sortable="true" data-field="date">Date</th>
                                <th class="col-sm-2" data-sortable="true" data-field="request-type">Type</th>
                                <th data-sortable="true" data-field="volunteer">Volunteer</th>
                                @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                {
                                    <th class="col-sm-2"></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(s => s.DateOfShift))
                            {
                                <tr>
                                    <td>@item.DateOfShift.ToShortDateString()</td>
                                    <td>@item.Type</td>
                                    <td>
                                        @if (item.UserId == null)
                                        {
                                            if (!User.IsInRole("Pledge") || item.Type != SoberSignupType.Officer)
                                            {
                                                @Html.ActionLink("Sign up", "Signup", "Sobers", new { id = item.SignupId, area = "Sphinx" }, null)
                                            }
                                        }
                                        else if (item.Member.UserName == User.Identity.Name || User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                        {
                                            using (Html.BeginForm("CancelSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" },
                                                FormMethod.Get, new { style = "display: inline" }))
                                            {
                                                @item.Member.ToString()
                                                <button type="submit" class="btn btn-sm btn-link" style="padding:0;  color:#d9534f; display:inline">
                                                    <i class="fa fa-minus-square"></i>
                                                </button>
                                            }
                                        }
                                        else
                                        {
                                            @item.Member.ToString()
                                        }
                                    </td>
                                    @if (User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                                    {
                                        <td class="text-right">
                                            <a class="" href="@Url.Action("EditSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" })">
                                                Edit
                                            </a> | 
                                            <a class="" href="@Url.Action("DeleteSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" })">
                                                Delete
                                            </a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <iframe src="https://www.google.com/calendar/embed?showTitle=0&amp;showPrint=0&amp;showTabs=0&amp;showCalendars=0&amp;height=600&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=dspeboard%40gmail.com&amp;color=%23125A12&amp;ctz=America%2FChicago" 
            style=" border-width:0 " width="100%" height="600" frameborder="0" scrolling="no"></iframe>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        


    </script>
}
