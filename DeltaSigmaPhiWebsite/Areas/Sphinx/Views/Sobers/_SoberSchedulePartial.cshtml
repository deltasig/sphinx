@using DeltaSigmaPhiWebsite.Entities
@model IEnumerable<DeltaSigmaPhiWebsite.Entities.SoberSignup>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th colspan="5"><small>Next 7 Days</small></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td>No lifeguards on duty</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>@item.DateOfShift.DayOfWeek.ToString().Substring(0, 3)</td>
                    <td>@item.DateOfShift.ToShortDateString()</td>
                    @if (item.UserId == null)
                    {
                        if (User.IsInRole("Pledge") && item.Type == SoberSignupType.Officer)
                        {
                            <td>None</td>
                            <td></td>
                        }
                        else
                        {
                            <td>None</td>
                            <td>@Html.ActionLink("Sign up", "Signup", "Sobers", new { id = item.SignupId, area = "Sphinx" }, null)</td>
                        }
                    }
                    else if (item.Member.UserName == User.Identity.Name || User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                    {
                        using (Html.BeginForm("CancelSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" },
                            FormMethod.Get, new { style = "display: inline" }))
                        {
                            <td>
                                @item.Member.ToString()
                                <button type="submit" class="btn btn-sm btn-link" style="padding:0; color:red; display:inline">
                                    <i class="fa fa-minus-square"></i>
                                </button>
                            </td>
                            <td>
                                <a href="tel:@item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number">
                                    @item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number
                                </a>
                            </td>
                        }
                    }
                    else
                    {
                        <td>
                            @item.Member.ToString()
                        </td>
                        <td>
                            <a href="tel:@item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number">
                                @item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>