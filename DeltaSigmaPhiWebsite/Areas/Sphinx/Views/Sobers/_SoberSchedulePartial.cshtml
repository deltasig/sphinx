@using DeltaSigmaPhiWebsite.Entities
@model IEnumerable<SoberSignup>
@{
    var dates = Model.Select(s => s.DateOfShift).Distinct();
}
<!-- Standard view. -->
<div class="hidden-xs hidden-sm">
    <table data-toggle="table" data-classes="table table-condensed"
           data-search="false" data-pagination="false">
        <thead>
            <tr>
                <th colspan="2"><small>Next 7 Days</small></th>
                <th class="col-sm-6"></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="2">No lifeguards on duty</td>
                    <td></td>
                </tr>
            }
            @foreach (var date in dates)
            {
                <tr class="active">
                    <td><strong>@date.ToString("MM-dd") (@date.DayOfWeek.ToString().Substring(0, 3))</strong></td>
                    <td></td>
                </tr>
                foreach (var item in Model.Where(i => i.DateOfShift == date).OrderBy(s => s.SoberTypeId))
                {
                    <tr>
                        <td>
                            <small>@item.SoberType.Name</small>
                        </td>
                        <td id="@(item.SignupId)cell">
                            @if (item.UserId == null)
                            {
                                if (User.IsInRole("Pledge") && item.SoberType.Name == "Officer")
                                {
                                    <small>None</small>
                                }
                                else
                                {
                                    <small>
                                        None
                                    </small>
                                    <a href="@Url.Action("Signup", "Sobers", new {id = item.SignupId, area = "Sphinx"})"
                                        class="social pull-right"
                                        data-toggle="tooltip" data-placement="left"
                                        title="Sign up">
                                        <i class="fa fa-plus-square fa-lg text-success"></i>
                                    </a>
                                }
                            }
                            else if (item.Member.UserName == User.Identity.Name || User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                            {
                                using (Html.BeginForm("CancelSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" },
                                    FormMethod.Get, new { style = "display: inline" }))
                                {
                                    <button type="submit" class="btn btn-sm btn-link"
                                            style="padding: 0; color: #d9534f; display: inline; margin:0"
                                            data-toggle="tooltip" data-placement="top"
                                            title="Cancel signup">
                                        <i class="fa fa-minus-square fa-lg"></i>
                                    </button>
                                    <small id="@item.SignupId">
                                        @item.Member.ToString()
                                    </small>
                                    <small id="@(item.SignupId)num">
                                        <strong>
                                            @item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number
                                        </strong>
                                    </small>

                                    <a class="social pull-right" id="@(item.SignupId)show">
                                        <i class="fa fa-phone-square fa-lg text-info"></i>
                                    </a>
                                    <script>
                                        $('#@(item.SignupId)num').hide();
                                        $('#@(item.SignupId)show').hover(function () {
                                            $('#@(item.SignupId)').hide();
                                            $('#@(item.SignupId)cell').addClass('warning');
                                            $('#@(item.SignupId)num').show();
                                        }, function () {
                                            $('#@(item.SignupId)num').hide();
                                            $('#@(item.SignupId)cell').removeClass('warning');
                                            $('#@(item.SignupId)').show();
                                        });
                                    </script>
                                }
                            }
                            else
                            {
                                <a href="tel:@item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number">
                                    @item.Member.ToString()
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<!-- Compact view. -->
<div class="visible-xs visible-sm">
    <table class="table">
        <thead>
            <tr>
                <th><small>Next 7 Days</small></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td>No lifeguards on duty</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    @if (item.UserId == null)
                    {
                        if (User.IsInRole("Pledge") && item.SoberType.Name == "Officer")
                        {
                            <td>
                                <small class="pull-right">
                                    @item.DateOfShift.ToString("MM-dd")
                                    (@item.DateOfShift.DayOfWeek.ToString().Substring(0, 3))
                                </small>
                                None <small>@item.SoberType.Name</small>
                            </td>
                        }
                        else
                        {
                            <td>
                                <small class="pull-right">
                                    @item.DateOfShift.ToString("MM-dd")
                                    (@item.DateOfShift.DayOfWeek.ToString().Substring(0, 3))
                                </small>
                                @Html.ActionLink("Sign up", "Signup", "Sobers", new { id = item.SignupId, area = "Sphinx" }, null) 
                                <small>@item.SoberType.Name</small>
                            </td>
                        }
                    }
                    else if (item.Member.UserName == User.Identity.Name || User.IsInRole("Administrator") || User.IsInRole("Sergeant-at-Arms"))
                    {
                        using (Html.BeginForm("CancelSignup", "Sobers", new { id = item.SignupId, area = "Sphinx" },
                            FormMethod.Get, new { style = "display: inline" }))
                        {
                            <td>
                                <small class="pull-right">
                                    @item.DateOfShift.ToString("MM-dd")
                                    (@item.DateOfShift.DayOfWeek.ToString().Substring(0, 3))
                                </small>
                                <button type="submit" class="btn btn-sm btn-link" style="padding: 0; color: #d9534f; display: inline">
                                    <i class="fa fa-minus-square"></i>
                                </button>
                                @item.Member.ToString()
                                <small>@item.SoberType.Name</small><br/>
                                <a href="tel:@item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number">
                                    @item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number
                                </a>
                            </td>
                        }
                    }
                    else
                    {
                        <td>
                            <small class="pull-right">
                                @item.DateOfShift.ToString("MM-dd")
                                (@item.DateOfShift.DayOfWeek.ToString().Substring(0, 3))
                            </small>
                            @item.Member.ToString()
                            <small>@item.SoberType.Name</small><br/>
                            <a href="tel:@item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number">
                                @item.Member.PhoneNumbers.Single(m => m.Type == "Mobile").Number
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
