@model IEnumerable<Dsp.Web.Entities.ScholarshipType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Scholarship Types";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6">
            <p>
                <a href="@Url.Action("Index", "Applications", new { area = "Scholarships" })" class="btn btn-sm btn-default">
                    <i class="fa fa-caret-left"></i> Back to Scholarships
                </a>
            </p>
        </div>
        <div class="col-xs-6 text-right">
            <p>
                @Html.ActionLink("Create New", "Create", "Types", new { area = "Scholarships" }, new { @class = "btn btn-sm btn-success" })
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-7">Name</th>
                            <th class="col-md-2">Applications</th>
                            <th class="col-md-2">Total Submissions</th>
                            <th class="col-md-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Applications.Count</td>
                                <td>@item.Applications.Sum(a => a.Submissions.Count)</td>
                                <td class="text-right">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ScholarshipTypeId })
                                    @if (!item.Applications.Any())
                                    {
                                        @: |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ScholarshipTypeId })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
